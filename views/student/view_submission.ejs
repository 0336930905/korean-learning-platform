                Bạn có chắc chắn muốn hủy nộp bài này không? Hành động này không thể hoàn tác và bạn sẽ cần nộp lại bài tập.
            </div>
            
            <div class="modal-actions">
                <button onclick="closeDeleteModal()" class="modal-btn btn-cancel">
                    <i class="fas fa-times"></i>
                    <span>Hủy</span>
                </button>
                <button onclick="confirmDelete()" class="modal-btn btn-confirm">
                    <i class="fas fa-check"></i>
                    <span>Xác nhận</span>
                </button>
            </div>
        </div>
    </div>

    <%- include('../partials/student_footer') %>
    
    <script>
        let currentAssignmentId = null;

        function showDeleteModal(assignmentId) {
            // First check if submission can be deleted
            fetch(`/student/check-submission/${assignmentId}`)
                .then(response => response.json())
                .then(data => {
                    if (data.canDelete) {
                        currentAssignmentId = assignmentId;
                        document.getElementById('deleteModal').classList.add('show');
                    } else {
                        showNotification('Không thể hủy bài đã được chấm điểm', 'error');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    showNotification('Có lỗi xảy ra khi kiểm tra trạng thái bài nộp', 'error');
                });
        }

        function closeDeleteModal() {
            document.getElementById('deleteModal').classList.remove('show');
            currentAssignmentId = null;
        }

        function confirmDelete() {
            if (!currentAssignmentId) return;

            // Show loading state
            const confirmBtn = document.querySelector('.btn-confirm');
            const originalContent = confirmBtn.innerHTML;
            confirmBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i><span>Đang xử lý...</span>';
            confirmBtn.disabled = true;

            fetch(`/student/delete-submission/${currentAssignmentId}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showNotification('Đã hủy nộp bài thành công!', 'success');
                    setTimeout(() => {
                        window.location.href = '/student/assignments/submit';
                    }, 1500);
                } else if (data.error === 'ALREADY_GRADED') {
                    showNotification('Không thể hủy bài đã được chấm điểm', 'error');
                } else {
                    showNotification(data.message || 'Có lỗi xảy ra khi hủy nộp bài', 'error');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showNotification('Có lỗi xảy ra khi hủy nộp bài', 'error');
            })
            .finally(() => {
                confirmBtn.innerHTML = originalContent;
                confirmBtn.disabled = false;
                closeDeleteModal();
            });
        }

        function showNotification(message, type = 'success') {
            const notification = document.createElement('div');
            notification.className = 'notification';
            
            switch (type) {
                case 'success':
                    notification.style.background = 'linear-gradient(135deg, #10b981, #34d399)';
                    break;
                case 'error':
                    notification.style.background = 'linear-gradient(135deg, #ef4444, #f87171)';
                    break;
                case 'warning':
                    notification.style.background = 'linear-gradient(135deg, #f59e0b, #fbbf24)';
                    break;
                case 'info':
                    notification.style.background = 'linear-gradient(135deg, #3b82f6, #60a5fa)';
                    break;
            }
            
            notification.innerHTML = `
                <div class="flex items-center gap-3">
                    <i class="fas ${type === 'success' ? 'fa-check-circle' : 
                                   type === 'error' ? 'fa-exclamation-circle' : 
                                   type === 'warning' ? 'fa-exclamation-triangle' :
                                   'fa-info-circle'}"></i>
                    <span>${message}</span>
                </div>
            `;
            
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.style.transform = 'translateX(100%)';
                notification.style.opacity = '0';
                setTimeout(() => notification.remove(), 300);
            }, 4000);
        }

        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            // Add staggered animations
            const elements = document.querySelectorAll('.slide-in, .fade-in');
            elements.forEach((el, index) => {
                if (!el.style.animationDelay) {
                    el.style.animationDelay = `${index * 0.1}s`;
                }
            });

            // Close modal when clicking outside
            document.getElementById('deleteModal').addEventListener('click', function(e) {
                if (e.target === this) {
                    closeDeleteModal();
                }
            });
        });

        // Keyboard shortcuts
        document.addEventListener('keydown', function(e) {
            // Escape to close modal or go back
            if (e.key === 'Escape') {
                const modal = document.getElementById('deleteModal');
                if (modal.classList.contains('show')) {
                    closeDeleteModal();
                } else {
                    window.history.back();
                }
            }
            
            // Enter to confirm in modal
            if (e.key === 'Enter' && document.getElementById('deleteModal').classList.contains('show')) {
                confirmDelete();
            }
        });
    </script>
</body>
