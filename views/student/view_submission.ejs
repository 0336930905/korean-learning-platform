                                        const fileIcon = getFileIcon(fileType);
                                        const fileIconStyle = getFileIconStyle(fileType);
                                        
                                        let fileTypeColor = 'background: rgba(107, 114, 128, 0.1); color: #6b7280; border-color: rgba(107, 114, 128, 0.2);';
                                        
