        function loadVoices() {
            voices = speechSynthesis.getVoices().filter(voice => {
                return voice.lang.includes('ko') || voice.name.toLowerCase().includes('korean');
            });
            
            if (voices.length > 0) {
                selectedVoice = voices[0];
