                        showNotification(`ƒê√£ ch·ªçn: ${selectedVoice.name} - ${voiceType}`, 'success');
                        
                        // Test the new voice with a common Korean greeting
                        setTimeout(() => {
                            playAudio('ÏïàÎÖïÌïòÏÑ∏Ïöî');
