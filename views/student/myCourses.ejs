<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Khóa học của tôi | Korean Learning</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        .glass-card {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.3);
        }
        
        .gradient-bg {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        
        .floating-animation {
            animation: float 3s ease-in-out infinite;
        }
        
        @keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-8px); }
        }
        
        .slide-in {
            animation: slideIn 0.6s ease-out forwards;
        }
        
        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .gradient-text {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }
        
        .header-icon {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 32px;
            margin-bottom: 24px;
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
        }
        
        .stats-container {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(15px);
            border: 1px solid rgba(255, 255, 255, 0.3);
            border-radius: 25px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            position: relative;
            margin-bottom: 32px;
        }
        
        .stats-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 4px;
            background: linear-gradient(90deg, #667eea, #764ba2);
        }
        
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 24px;
            padding: 32px;
        }
        
        .stat-card {
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.05), rgba(118, 75, 162, 0.05));
            border: 2px solid rgba(102, 126, 234, 0.1);
            border-radius: 20px;
            padding: 24px;
            text-align: center;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }
        
        .stat-card::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: linear-gradient(45deg, transparent, rgba(102, 126, 234, 0.1), transparent);
            transform: rotate(45deg);
            transition: all 0.6s ease;
            opacity: 0;
        }
        
        .stat-card:hover::before {
            animation: shimmer 1.5s ease-in-out;
            opacity: 1;
        }
        
        @keyframes shimmer {
            0% { transform: translateX(-100%) translateY(-100%) rotate(45deg); }
            100% { transform: translateX(100%) translateY(100%) rotate(45deg); }
        }
        
        .stat-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 20px 40px rgba(102, 126, 234, 0.15);
            border-color: rgba(102, 126, 234, 0.3);
        }
        
        .stat-icon {
            width: 60px;
            height: 60px;
            margin: 0 auto 16px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            color: white;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }
        
        .stat-number {
            font-size: 32px;
            font-weight: 700;
            color: #374151;
            margin-bottom: 8px;
        }
        
        .stat-label {
            font-size: 16px;
            color: #6b7280;
            font-weight: 500;
        }
        
        .course-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(15px);
            border: 1px solid rgba(255, 255, 255, 0.3);
            border-radius: 25px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            position: relative;
            transition: all 0.4s ease;
            cursor: pointer;
        }
        
        .course-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 4px;
            background: linear-gradient(90deg, #10b981, #34d399);
        }
        
        .course-card:hover {
            transform: translateY(-12px) scale(1.02);
            box-shadow: 0 35px 80px rgba(0, 0, 0, 0.15);
        }
        
        .course-image-container {
            position: relative;
            overflow: hidden;
            height: 200px;
        }
        
        .course-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: all 0.6s ease;
        }
        
        .course-card:hover .course-image {
            transform: scale(1.1);
        }
        
        .image-overlay {
            position: absolute;
            inset: 0;
            background: linear-gradient(45deg, transparent, rgba(0, 0, 0, 0.3));
            opacity: 0;
            transition: opacity 0.3s ease;
        }
        
        .course-card:hover .image-overlay {
            opacity: 1;
        }
        
        .course-badge {
            position: absolute;
            top: 16px;
            right: 16px;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.3);
            padding: 8px 16px;
            border-radius: 20px;
            font-weight: 600;
            font-size: 12px;
            color: #374151;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }
        
        .level-badge {
            position: absolute;
            top: 16px;
            left: 16px;
            padding: 6px 12px;
            border-radius: 12px;
            font-weight: 600;
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        
        .level-basic {
            background: linear-gradient(135deg, rgba(34, 197, 94, 0.9), rgba(101, 163, 13, 0.9));
            color: white;
        }
        
        .level-intermediate {
            background: linear-gradient(135deg, rgba(59, 130, 246, 0.9), rgba(96, 165, 250, 0.9));
            color: white;
        }
        
        .level-advanced {
            background: linear-gradient(135deg, rgba(147, 51, 234, 0.9), rgba(168, 85, 247, 0.9));
            color: white;
        }
        
        .play-button {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 60px;
            height: 60px;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border: none;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
            color: #667eea;
            cursor: pointer;
            transition: all 0.3s ease;
            opacity: 0;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
        }
        
        .course-card:hover .play-button {
            opacity: 1;
            transform: translate(-50%, -50%) scale(1.1);
        }
        
        .play-button:hover {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
        }
        
        .course-content {
            padding: 24px;
        }
        
        .course-title {
            font-size: 20px;
            font-weight: 700;
            color: #374151;
            margin-bottom: 12px;
            line-height: 1.3;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
        
        .course-description {
            color: #6b7280;
            font-size: 14px;
            line-height: 1.6;
            margin-bottom: 20px;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
        
        .course-stats {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 16px;
            margin-bottom: 24px;
        }
        
        .course-stat {
            display: flex;
            align-items: center;
            gap: 8px;
            padding: 8px 12px;
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.05), rgba(118, 75, 162, 0.05));
            border-radius: 12px;
            border: 1px solid rgba(102, 126, 234, 0.1);
            font-size: 14px;
            color: #374151;
        }
        
        .stat-icon-small {
            font-size: 14px;
            color: #667eea;
        }
        
        .progress-section {
            margin-bottom: 24px;
        }
        
        .progress-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 8px;
        }
        
        .progress-label {
            font-size: 14px;
            font-weight: 600;
            color: #374151;
        }
        
        .progress-percentage {
            font-size: 14px;
            font-weight: 700;
            color: #10b981;
        }
        
        .progress-bar {
            width: 100%;
            height: 8px;
            background: rgba(0, 0, 0, 0.1);
            border-radius: 4px;
            overflow: hidden;
        }
        
        .progress-fill {
            height: 100%;
            background: linear-gradient(90deg, #10b981, #34d399);
            border-radius: 4px;
            transition: width 0.8s ease;
        }
        
        .course-actions {
            display: flex;
            gap: 12px;
        }
        
        .btn-primary {
            flex: 1;
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            padding: 12px 20px;
            border: none;
            border-radius: 12px;
            font-weight: 600;
            font-size: 14px;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            text-align: center;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
        }
        
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
            text-decoration: none;
            color: white;
        }
        
        .btn-secondary {
            padding: 12px;
            background: rgba(107, 114, 128, 0.1);
            border: 2px solid rgba(107, 114, 128, 0.2);
            border-radius: 12px;
            color: #6b7280;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .btn-secondary:hover {
            background: rgba(107, 114, 128, 0.2);
            border-color: rgba(107, 114, 128, 0.3);
            transform: translateY(-2px);
            color: #374151;
            text-decoration: none;
        }
        
        .empty-state {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(15px);
            border: 1px solid rgba(255, 255, 255, 0.3);
            border-radius: 25px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
            padding: 60px 40px;
            text-align: center;
            position: relative;
            overflow: hidden;
        }
        
        .empty-state::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 4px;
            background: linear-gradient(90deg, #667eea, #764ba2);
        }
        
        .empty-icon {
            width: 120px;
            height: 120px;
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 32px;
            animation: float 3s ease-in-out infinite;
        }
        
        .empty-icon i {
            font-size: 48px;
            color: #667eea;
        }
        
        .empty-title {
            font-size: 28px;
            font-weight: 700;
            color: #374151;
            margin-bottom: 16px;
        }
        
        .empty-description {
            font-size: 16px;
            color: #6b7280;
            line-height: 1.6;
            margin-bottom: 32px;
            max-width: 400px;
            margin-left: auto;
            margin-right: auto;
        }
        
        .btn-explore {
            background: linear-gradient(135deg, #3b82f6, #60a5fa);
            color: white;
            padding: 16px 32px;
            border: none;
            border-radius: 16px;
            font-weight: 600;
            font-size: 16px;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 12px;
            box-shadow: 0 8px 25px rgba(59, 130, 246, 0.3);
        }
        
        .btn-explore:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 35px rgba(59, 130, 246, 0.4);
            text-decoration: none;
            color: white;
        }
        
        .filter-tabs {
            display: flex;
            gap: 8px;
            margin-bottom: 32px;
            flex-wrap: wrap;
        }
        
        .filter-tab {
            padding: 12px 24px;
            background: rgba(255, 255, 255, 0.7);
            border: 2px solid rgba(102, 126, 234, 0.1);
            border-radius: 20px;
            color: #6b7280;
            cursor: pointer;
            transition: all 0.3s ease;
            font-weight: 500;
            font-size: 14px;
        }
        
        .filter-tab:hover {
            background: rgba(102, 126, 234, 0.1);
            border-color: rgba(102, 126, 234, 0.2);
            color: #667eea;
        }
        
        .filter-tab.active {
            background: linear-gradient(135deg, #667eea, #764ba2);
            border-color: transparent;
            color: white;
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
        }
        
        .courses-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 32px;
            margin-bottom: 32px;
        }
        
        .fade-in {
            animation: fadeIn 0.8s ease-out forwards;
        }
        
        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .achievement-badge {
            position: absolute;
            bottom: 16px;
            right: 16px;
            background: linear-gradient(135deg, #f59e0b, #fbbf24);
            color: white;
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 4px;
            box-shadow: 0 4px 15px rgba(245, 158, 11, 0.3);
        }
        
        .recently-viewed {
            border: 2px solid #3b82f6;
            box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.1);
        }
        
        .recently-viewed::before {
            background: linear-gradient(90deg, #3b82f6, #60a5fa);
        }
        
        @media (max-width: 768px) {
            .header-icon {
                width: 60px;
                height: 60px;
                font-size: 24px;
            }
            
            .stats-grid {
                grid-template-columns: repeat(2, 1fr);
                gap: 16px;
                padding: 24px;
            }
            
            .stat-card {
                padding: 16px;
            }
            
            .stat-icon {
                width: 40px;
                height: 40px;
                font-size: 18px;
            }
            
            .stat-number {
                font-size: 24px;
            }
            
            .courses-grid {
                grid-template-columns: 1fr;
                gap: 24px;
                margin: 0 16px;
            }
            
            .course-card {
                border-radius: 20px;
            }
            
            .course-content {
                padding: 20px;
            }
            
            .course-stats {
                grid-template-columns: 1fr;
                gap: 12px;
            }
            
            .course-actions {
                flex-direction: column;
            }
            
            .filter-tabs {
                margin: 0 16px 24px;
            }
            
            .empty-state {
                margin: 0 16px;
                padding: 40px 24px;
            }
        }
    </style>
</head>
<body class="bg-gradient-to-br from-blue-50 via-purple-50 to-pink-50 min-h-screen">
    <div class="flex h-screen">
        <!-- Include Student Sidebar -->
        <%- include('../partials/student_sidebar', { 
            user: locals.user, 
            path: '/courses/my-courses' 
        }) %>

        <div class="flex-1 flex flex-col overflow-hidden">
            <%- include('../partials/dashboards_header') %>

            <main class="flex-1 overflow-x-hidden overflow-y-auto">
                <!-- Hero Section -->
                <div class="text-center py-8 slide-in">
                    <div class="header-icon floating-animation mx-auto">
                        <i class="fas fa-graduation-cap"></i>
                    </div>
                    <h1 class="text-4xl font-bold gradient-text mb-4">Khóa học của tôi</h1>
                    <p class="text-xl text-gray-600">Quản lý và theo dõi tiến độ học tập</p>
                </div>

                <div class="container mx-auto px-6 pb-32">
                    <!-- Stats Section -->
                    <div class="stats-container slide-in fade-in">
                        <div class="stats-grid">
                            <div class="stat-card">
                                <div class="stat-icon" style="background: linear-gradient(135deg, #10b981, #34d399);">
                                    <i class="fas fa-book-open"></i>
                                </div>
                                <div class="stat-number"><%= enrolledCourses.length %></div>
                                <div class="stat-label">Khóa học đã đăng ký</div>
                            </div>
                            
                            <div class="stat-card">
                                <div class="stat-icon" style="background: linear-gradient(135deg, #3b82f6, #60a5fa);">
                                    <i class="fas fa-clock"></i>
                                </div>
                                <div class="stat-number">
                                    <%= enrolledCourses.reduce((total, course) => {
                                        const duration = parseInt(course.duration) || 0;
                                        return total + duration;
                                    }, 0) %>h
                                </div>
                                <div class="stat-label">Tổng thời gian học</div>
                            </div>
                            
                            <div class="stat-card">
                                <div class="stat-icon" style="background: linear-gradient(135deg, #f59e0b, #fbbf24);">
                                    <i class="fas fa-trophy"></i>
                                </div>
                                <div class="stat-number">
                                    <%= enrolledCourses.filter(course => 
                                        Math.random() > 0.7 // Simulate completed courses
                                    ).length %>
                                </div>
                                <div class="stat-label">Khóa học hoàn thành</div>
                            </div>
                            
                            <div class="stat-card">
                                <div class="stat-icon" style="background: linear-gradient(135deg, #8b5cf6, #a78bfa);">
                                    <i class="fas fa-certificate"></i>
                                </div>
                                <div class="stat-number">
                                    <%= enrolledCourses.filter(course => 
                                        Math.random() > 0.8 // Simulate certificates
                                    ).length %>
                                </div>
                                <div class="stat-label">Chứng chỉ đạt được</div>
                            </div>
                        </div>
                    </div>

                    <!-- Action Button -->
                    <div class="text-center mb-8 slide-in fade-in">
                        <a href="/courses" class="btn-explore">
                            <i class="fas fa-compass"></i>
                            <span>Khám phá thêm khóa học</span>
                        </a>
                    </div>

                    <!-- Filter Tabs -->
                    <div class="filter-tabs slide-in fade-in">
                        <button class="filter-tab active" onclick="filterCourses('all')">
                            <i class="fas fa-th-large mr-2"></i>
                            Tất cả (<%= enrolledCourses.length %>)
                        </button>
                        <button class="filter-tab" onclick="filterCourses('in-progress')">
                            <i class="fas fa-play-circle mr-2"></i>
                            Đang học
                        </button>
                        <button class="filter-tab" onclick="filterCourses('completed')">
                            <i class="fas fa-check-circle mr-2"></i>
                            Hoàn thành
                        </button>
                        <button class="filter-tab" onclick="filterCourses('favorites')">
                            <i class="fas fa-heart mr-2"></i>
                            Yêu thích
                        </button>
                    </div>

                    <% if (enrolledCourses.length === 0) { %>
                        <!-- Empty State -->
                        <div class="empty-state slide-in fade-in">
                            <div class="empty-icon">
                                <i class="fas fa-graduation-cap"></i>
                            </div>
                            <div class="empty-title">Chưa có khóa học nào</div>
                            <div class="empty-description">
                                Bạn chưa đăng ký khóa học nào. Hãy khám phá các khóa học tiếng Hàn chất lượng cao và bắt đầu hành trình học tập của bạn ngay hôm nay!
                            </div>
                            <a href="/courses" class="btn-explore">
                                <i class="fas fa-search"></i>
                                <span>Tìm khóa học ngay</span>
                            </a>
                        </div>
                    <% } else { %>
                        <!-- Course Grid -->
                        <div class="courses-grid">
                            <% enrolledCourses.forEach((course, index) => { %>
                                <div class="course-card slide-in fade-in <%= Math.random() > 0.8 ? 'recently-viewed' : '' %>" 
                                     data-course-type="<%= Math.random() > 0.5 ? 'in-progress' : 'completed' %>"
                                     style="animation-delay: <%= index * 0.1 %>s;">
                                    
                                    <!-- Course Image -->
                                    <div class="course-image-container">
                                        <img src="<%= course.imageUrl || '/images/default-course.jpg' %>" 
                                             alt="<%= course.title %>"
                                             class="course-image"
                                             onerror="this.onerror=null; this.src='/images/default-course.jpg';">
                                        
                                        <div class="image-overlay"></div>
                                        
                                        <!-- Course Badge -->
                                        <div class="course-badge">
                                            <i class="fas fa-users mr-1"></i>
                                            <%= Math.floor(Math.random() * 500) + 50 %> học viên
                                        </div>
                                        
                                        <!-- Level Badge -->
                                        <div class="level-badge level-<%= course.level || 'basic' %>">
                                            <%= course.level === 'advanced' ? 'Nâng cao' :
                                               course.level === 'intermediate' ? 'Trung cấp' :
                                               'Cơ bản' %>
                                        </div>
                                        
                                        <!-- Play Button -->
                                        <button class="play-button" onclick="continueCourse('<%= course._id %>')">
                                            <i class="fas fa-play"></i>
                                        </button>
                                        
                                        <!-- Achievement Badge -->
                                        <% if (Math.random() > 0.7) { %>
                                            <div class="achievement-badge">
                                                <i class="fas fa-star"></i>
                                                <span>Xuất sắc</span>
                                            </div>
                                        <% } %>
                                    </div>

                                    <!-- Course Content -->
                                    <div class="course-content">
                                        <h2 class="course-title">
                                            <%= course.title %>
                                        </h2>
                                        <p class="course-description">
                                            <%= course.description || 'Khóa học tiếng Hàn chất lượng cao với phương pháp giảng dạy hiện đại và tương tác.' %>
                                        </p>

                                        <!-- Course Stats -->
                                        <div class="course-stats">
                                            <div class="course-stat">
                                                <i class="fas fa-clock stat-icon-small"></i>
                                                <span><%= course.duration || '24' %>h học tập</span>
                                            </div>
                                            <div class="course-stat">
                                                <i class="fas fa-list-ul stat-icon-small"></i>
                                                <span><%= Math.floor(Math.random() * 20) + 10 %> bài học</span>
                                            </div>
                                            <div class="course-stat">
                                                <i class="fas fa-star stat-icon-small"></i>
                                                <span><%= (Math.random() * 2 + 3).toFixed(1) %> ⭐</span>
                                            </div>
                                            <div class="course-stat">
                                                <i class="fas fa-certificate stat-icon-small"></i>
                                                <span>Có chứng chỉ</span>
                                            </div>
                                        </div>

                                        <!-- Progress Section -->
                                        <div class="progress-section">
                                            <div class="progress-header">
                                                <span class="progress-label">Tiến độ học tập</span>
                                                <span class="progress-percentage">
                                                    <%= Math.floor(Math.random() * 100) %>%
                                                </span>
                                            </div>
                                            <div class="progress-bar">
                                                <div class="progress-fill" 
                                                     style="width: <%= Math.floor(Math.random() * 100) %>%">
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Action Buttons -->
                                        <div class="course-actions">
                                            <a href="/student/<%= course._id %>/classes" class="btn-primary">
                                                <i class="fas fa-chalkboard-teacher"></i>
                                                <span>Xem lớp học</span>
                                            </a>
                                            
                                            <a href="/student/resources" 
                                               class="btn-secondary"
                                               title="Tài liệu học tập">
                                                <i class="fas fa-folder-open"></i>
                                            </a>
                                            
                                            <button class="btn-secondary" 
                                                    onclick="toggleFavorite('<%= course._id %>', this)"
                                                    title="Yêu thích">
                                                <i class="fas fa-heart"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    <% } %>
                </div>
            </main>
        </div>
    </div>

    <script>
        // Filter courses
        function filterCourses(type) {
            const tabs = document.querySelectorAll('.filter-tab');
            const courses = document.querySelectorAll('.course-card');
            
            // Update active tab
            tabs.forEach(tab => tab.classList.remove('active'));
            event.target.classList.add('active');
            
            // Filter courses
            courses.forEach(course => {
                const courseType = course.dataset.courseType;
                
                if (type === 'all') {
                    course.style.display = 'block';
                } else if (type === 'favorites') {
                    // Show favorited courses (implement localStorage check)
                    course.style.display = course.dataset.favorite === 'true' ? 'block' : 'none';
                } else {
                    course.style.display = courseType === type ? 'block' : 'none';
                }
            });
            
            showNotification(`Đã lọc khóa học theo: ${getFilterLabel(type)}`, 'info');
        }

        function getFilterLabel(type) {
            const labels = {
                'all': 'Tất cả',
                'in-progress': 'Đang học', 
                'completed': 'Hoàn thành',
                'favorites': 'Yêu thích'
            };
            return labels[type] || 'Tất cả';
        }

        // Continue course
        function continueCourse(courseId) {
            showNotification('Đang chuyển đến khóa học...', 'info');
            setTimeout(() => {
                window.location.href = `/courses/${courseId}`;
            }, 500);
        }

        // Toggle favorite
        function toggleFavorite(courseId, button) {
            const icon = button.querySelector('i');
            const isFavorite = icon.classList.contains('fas');
            
            if (isFavorite) {
                icon.classList.remove('fas');
                icon.classList.add('far');
                button.closest('.course-card').dataset.favorite = 'false';
                showNotification('Đã xóa khỏi danh sách yêu thích', 'info');
            } else {
                icon.classList.remove('far');
                icon.classList.add('fas');
                button.closest('.course-card').dataset.favorite = 'true';
                showNotification('Đã thêm vào danh sách yêu thích', 'success');
            }
            
            // Store in localStorage
            const favorites = JSON.parse(localStorage.getItem('favoriteCourses') || '[]');
            if (isFavorite) {
                const index = favorites.indexOf(courseId);
                if (index > -1) favorites.splice(index, 1);
            } else {
                favorites.push(courseId);
            }
            localStorage.setItem('favoriteCourses', JSON.stringify(favorites));
        }

        // Notification function
        function showNotification(message, type = 'success') {
            const notification = document.createElement('div');
            notification.className = `fixed top-6 right-6 z-50 px-6 py-4 rounded-lg shadow-lg text-white font-medium transition-all duration-300 transform translate-x-full`;
            
            switch (type) {
                case 'success':
                    notification.className += ' bg-gradient-to-r from-green-500 to-green-600';
                    break;
                case 'error':
                    notification.className += ' bg-gradient-to-r from-red-500 to-red-600';
                    break;
                case 'info':
                    notification.className += ' bg-gradient-to-r from-blue-500 to-blue-600';
                    break;
            }
            
            notification.innerHTML = `
                <div class="flex items-center gap-3">
                    <i class="fas ${type === 'success' ? 'fa-check-circle' : 
                                   type === 'error' ? 'fa-exclamation-circle' : 
                                   'fa-info-circle'}"></i>
                    <span>${message}</span>
                </div>
            `;
            
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.classList.remove('translate-x-full');
            }, 100);
            
            setTimeout(() => {
                notification.classList.add('translate-x-full');
                setTimeout(() => notification.remove(), 300);
            }, 3000);
        }

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            // Load favorites from localStorage
            const favorites = JSON.parse(localStorage.getItem('favoriteCourses') || '[]');
            favorites.forEach(courseId => {
                const course = document.querySelector(`[data-course-id="${courseId}"]`);
                if (course) {
                    course.dataset.favorite = 'true';
                    const heartIcon = course.querySelector('.fa-heart');
                    if (heartIcon) {
                        heartIcon.classList.remove('far');
                        heartIcon.classList.add('fas');
                    }
                }
            });

            // Add staggered animations
            const elements = document.querySelectorAll('.slide-in');
            elements.forEach((el, index) => {
                el.style.animationDelay = `${index * 0.1}s`;
            });

            // Initialize progress bars animation
            setTimeout(() => {
                const progressBars = document.querySelectorAll('.progress-fill');
                progressBars.forEach(bar => {
                    const width = bar.style.width;
                    bar.style.width = '0%';
                    setTimeout(() => {
                        bar.style.width = width;
                    }, 500);
                });
            }, 1000);
        });
    </script>
</body>
<%- include('../partials/student_footer') %>
</html>
