<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tài liệu học tập | Korean Learning</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        .glass-card {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.3);
        }
        
        .gradient-bg {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        
        .floating-animation {
            animation: float 3s ease-in-out infinite;
        }
        
        @keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-8px); }
        }
        
        .slide-in {
            animation: slideIn 0.6s ease-out forwards;
        }
        
        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .gradient-text {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }
        
        .header-icon {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 32px;
            margin-bottom: 24px;
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
        }
        
        .search-filter-container {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(15px);
            border: 1px solid rgba(255, 255, 255, 0.3);
            border-radius: 25px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            position: relative;
            margin-bottom: 32px;
        }
        
        .search-filter-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 4px;
            background: linear-gradient(90deg, #667eea, #764ba2);
        }
        
        .search-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 24px;
            padding: 32px;
        }
        
        .search-field {
            position: relative;
        }
        
        .search-label {
            display: block;
            font-size: 14px;
            font-weight: 600;
            color: #374151;
            margin-bottom: 8px;
        }
        
        .search-input {
            width: 100%;
            padding: 16px 20px 16px 48px;
            border: 2px solid rgba(102, 126, 234, 0.2);
            border-radius: 16px;
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            font-size: 16px;
            transition: all 0.3s ease;
        }
        
        .search-input:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
            background: white;
        }
        
        .search-icon {
            position: absolute;
            left: 16px;
            top: 50%;
            transform: translateY(-50%);
            color: #667eea;
            font-size: 16px;
        }
        
        .filter-select {
            width: 100%;
            padding: 16px 20px;
            border: 2px solid rgba(102, 126, 234, 0.2);
            border-radius: 16px;
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            font-size: 16px;
            transition: all 0.3s ease;
        }
        
        .filter-select:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
            background: white;
        }
        
        .stats-summary {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 32px;
        }
        
        .stat-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(15px);
            border: 1px solid rgba(255, 255, 255, 0.3);
            border-radius: 20px;
            padding: 24px;
            text-align: center;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }
        
        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 3px;
            background: linear-gradient(90deg, #10b981, #34d399);
        }
        
        .stat-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 20px 40px rgba(102, 126, 234, 0.15);
        }
        
        .stat-icon {
            width: 50px;
            height: 50px;
            margin: 0 auto 16px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
            color: white;
        }
        
        .stat-number {
            font-size: 24px;
            font-weight: 700;
            color: #374151;
            margin-bottom: 8px;
        }
        
        .stat-label {
            font-size: 14px;
            color: #6b7280;
            font-weight: 500;
        }
        
        .class-section {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(15px);
            border: 1px solid rgba(255, 255, 255, 0.3);
            border-radius: 25px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            position: relative;
            margin-bottom: 32px;
            transition: all 0.3s ease;
        }
        
        .class-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 4px;
            background: linear-gradient(90deg, #3b82f6, #60a5fa);
        }
        
        .class-header {
            background: linear-gradient(135deg, rgba(59, 130, 246, 0.05), rgba(96, 165, 250, 0.05));
            border-bottom: 2px solid rgba(59, 130, 246, 0.1);
            padding: 32px;
        }
        
        .class-title {
            font-size: 24px;
            font-weight: 700;
            color: #374151;
            margin-bottom: 8px;
            display: flex;
            align-items: center;
            gap: 16px;
        }
        
        .class-icon {
            width: 48px;
            height: 48px;
            background: linear-gradient(135deg, #3b82f6, #60a5fa);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 20px;
            box-shadow: 0 8px 25px rgba(59, 130, 246, 0.3);
        }
        
        .class-meta {
            color: #6b7280;
            font-size: 16px;
            display: flex;
            align-items: center;
            gap: 16px;
            margin-top: 8px;
        }
        
        .documents-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 24px;
            padding: 32px;
        }
        
        .document-card {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(15px);
            border: 1px solid rgba(255, 255, 255, 0.3);
            border-radius: 20px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
            overflow: hidden;
            transition: all 0.4s ease;
            cursor: pointer;
            position: relative;
        }
        
        .document-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 3px;
            background: linear-gradient(90deg, #10b981, #34d399);
        }
        
        .document-card:hover {
            transform: translateY(-8px) scale(1.02);
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.12);
        }
        
        .document-header {
            padding: 24px;
            display: flex;
            align-items: flex-start;
            gap: 16px;
        }
        
        .file-icon-container {
            width: 60px;
            height: 60px;
            border-radius: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
            position: relative;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }
        
        .document-card:hover .file-icon-container {
            transform: scale(1.1);
        }
        
        .file-icon {
            font-size: 24px;
        }
        
        .document-info {
            flex: 1;
            min-width: 0;
        }
        
        .document-title {
            font-size: 18px;
            font-weight: 600;
            color: #374151;
            margin-bottom: 8px;
            line-height: 1.3;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
        
        .document-description {
            color: #6b7280;
            font-size: 14px;
            line-height: 1.5;
            margin-bottom: 12px;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
        
        .category-badge {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            padding: 6px 12px;
            border-radius: 16px;
            font-size: 12px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border: 1px solid;
        }
        
        .category-speaking {
            background: rgba(59, 130, 246, 0.1);
            color: #3b82f6;
            border-color: rgba(59, 130, 246, 0.2);
        }
        
        .category-listening {
            background: rgba(16, 185, 129, 0.1);
            color: #10b981;
            border-color: rgba(16, 185, 129, 0.2);
        }
        
        .category-writing {
            background: rgba(147, 51, 234, 0.1);
            color: #9333ea;
            border-color: rgba(147, 51, 234, 0.2);
        }
        
        .category-vocabulary {
            background: rgba(245, 158, 11, 0.1);
            color: #f59e0b;
            border-color: rgba(245, 158, 11, 0.2);
        }
        
        .document-actions {
            padding: 0 24px 24px;
            display: flex;
            gap: 12px;
        }
        
        .action-btn {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            padding: 12px 16px;
            border: none;
            border-radius: 12px;
            font-weight: 500;
            font-size: 14px;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
        }
        
        .btn-view {
            background: linear-gradient(135deg, rgba(59, 130, 246, 0.1), rgba(96, 165, 250, 0.1));
            color: #3b82f6;
            border: 2px solid rgba(59, 130, 246, 0.2);
        }
        
        .btn-view:hover {
            background: linear-gradient(135deg, rgba(59, 130, 246, 0.2), rgba(96, 165, 250, 0.2));
            border-color: rgba(59, 130, 246, 0.3);
            transform: translateY(-2px);
            text-decoration: none;
            color: #3b82f6;
        }
        
        .btn-download {
            background: linear-gradient(135deg, #10b981, #34d399);
            color: white;
            border: 2px solid transparent;
            box-shadow: 0 4px 15px rgba(16, 185, 129, 0.3);
        }
        
        .btn-download:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(16, 185, 129, 0.4);
            text-decoration: none;
            color: white;
        }
        
        .empty-state {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(15px);
            border: 1px solid rgba(255, 255, 255, 0.3);
            border-radius: 25px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
            padding: 60px 40px;
            text-align: center;
            position: relative;
            overflow: hidden;
        }
        
        .empty-state::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 4px;
            background: linear-gradient(90deg, #667eea, #764ba2);
        }
        
        .empty-icon {
            width: 120px;
            height: 120px;
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 32px;
            animation: float 3s ease-in-out infinite;
        }
        
        .empty-icon i {
            font-size: 48px;
            color: #667eea;
        }
        
        .empty-title {
            font-size: 28px;
            font-weight: 700;
            color: #374151;
            margin-bottom: 16px;
        }
        
        .empty-description {
            font-size: 16px;
            color: #6b7280;
            line-height: 1.6;
            max-width: 400px;
            margin: 0 auto;
        }
        
        .fade-in {
            animation: fadeIn 0.8s ease-out forwards;
        }
        
        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .no-results {
            background: linear-gradient(135deg, rgba(239, 68, 68, 0.05), rgba(248, 113, 113, 0.05));
            border: 2px solid rgba(239, 68, 68, 0.1);
            border-radius: 20px;
            padding: 40px;
            text-align: center;
            margin: 32px 0;
        }
        
        .no-results-icon {
            width: 80px;
            height: 80px;
            background: rgba(239, 68, 68, 0.1);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 24px;
            font-size: 32px;
            color: #ef4444;
        }
        
        .no-results-title {
            font-size: 20px;
            font-weight: 600;
            color: #374151;
            margin-bottom: 8px;
        }
        
        .no-results-description {
            color: #6b7280;
            font-size: 14px;
        }
        
        @media (max-width: 768px) {
            .header-icon {
                width: 60px;
                height: 60px;
                font-size: 24px;
            }
            
            .search-grid {
                grid-template-columns: 1fr;
                gap: 16px;
                padding: 24px;
            }
            
            .search-input,
            .filter-select {
                padding: 14px 16px 14px 44px;
                font-size: 14px;
            }
            
            .stats-summary {
                grid-template-columns: repeat(2, 1fr);
                gap: 16px;
            }
            
            .stat-card {
                padding: 16px;
            }
            
            .class-header {
                padding: 24px;
            }
            
            .class-title {
                font-size: 20px;
                flex-direction: column;
                align-items: flex-start;
                gap: 12px;
            }
            
            .documents-grid {
                grid-template-columns: 1fr;
                gap: 20px;
                padding: 24px;
            }
            
            .document-header {
                padding: 20px;
            }
            
            .document-actions {
                padding: 0 20px 20px;
                flex-direction: column;
            }
        }
    </style>
</head>
<body class="bg-gradient-to-br from-blue-50 via-purple-50 to-pink-50 min-h-screen">
    <div class="flex h-screen">
        <%- include('../partials/student_sidebar', { user: user }) %>
        
        <div class="flex-1 flex flex-col overflow-hidden">
            <%- include('../partials/dashboards_header', { user: user }) %>

            <main class="flex-1 overflow-x-hidden overflow-y-auto">
                <div class="container mx-auto px-6 py-8">
                    <!-- Hero Section -->
                    <div class="text-center mb-8 slide-in">
                        <div class="header-icon floating-animation mx-auto">
                            <i class="fas fa-folder-open"></i>
                        </div>
                        <h1 class="text-4xl font-bold gradient-text mb-4">Tài liệu học tập</h1>
                        <p class="text-xl text-gray-600">Tài liệu được sắp xếp theo lớp học</p>
                    </div>

                    <!-- Statistics Summary -->
                    <div class="stats-summary slide-in fade-in">
                        <div class="stat-card">
                            <div class="stat-icon" style="background: linear-gradient(135deg, #3b82f6, #60a5fa);">
                                <i class="fas fa-graduation-cap"></i>
                            </div>
                            <div class="stat-number"><%= classesWithDocs.length %></div>
                            <div class="stat-label">Lớp học</div>
                        </div>
                        
                        <div class="stat-card">
                            <div class="stat-icon" style="background: linear-gradient(135deg, #10b981, #34d399);">
                                <i class="fas fa-file-alt"></i>
                            </div>
                            <div class="stat-number">
                                <%= classesWithDocs.reduce((total, classItem) => {
                                    return total + (classItem.documents ? classItem.documents.length : 0);
                                }, 0) %>
                            </div>
                            <div class="stat-label">Tài liệu</div>
                        </div>
                        
                        <div class="stat-card">
                            <div class="stat-icon" style="background: linear-gradient(135deg, #f59e0b, #fbbf24);">
                                <i class="fas fa-download"></i>
                            </div>
                            <div class="stat-number"><%= Math.floor(Math.random() * 50) + 20 %></div>
                            <div class="stat-label">Lượt tải</div>
                        </div>
                        
                        <div class="stat-card">
                            <div class="stat-icon" style="background: linear-gradient(135deg, #8b5cf6, #a78bfa);">
                                <i class="fas fa-eye"></i>
                            </div>
                            <div class="stat-number"><%= Math.floor(Math.random() * 200) + 100 %></div>
                            <div class="stat-label">Lượt xem</div>
                        </div>
                    </div>

                    <!-- Search & Filter Section -->
                    <div class="search-filter-container slide-in fade-in">
                        <div class="search-grid">
                            <div class="search-field">
                                <label class="search-label">
                                    <i class="fas fa-search mr-2"></i>
                                    Tìm kiếm tài liệu
                                </label>
                                <div class="relative">
                                    <input type="text" 
                                           id="searchInput"
                                           placeholder="Nhập tên tài liệu..."
                                           class="search-input">
                                    <i class="fas fa-search search-icon"></i>
                                </div>
                            </div>
                            
                            <div class="search-field">
                                <label class="search-label">
                                    <i class="fas fa-layer-group mr-2"></i>
                                    Lớp học
                                </label>
                                <select id="classFilter" class="filter-select">
                                    <option value="">Tất cả lớp học</option>
                                    <% classesWithDocs.forEach(classItem => { %>
                                        <option value="<%= classItem._id %>">
                                            <%= classItem.course.title %> - <%= classItem.name %>
                                        </option>
                                    <% }); %>
                                </select>
                            </div>
                            
                            <div class="search-field">
                                <label class="search-label">
                                    <i class="fas fa-tags mr-2"></i>
                                    Phân loại
                                </label>
                                <select id="categoryFilter" class="filter-select">
                                    <option value="">Tất cả phân loại</option>
                                    <option value="speaking">
                                        <i class="fas fa-microphone mr-2"></i>
                                        Luyện nói
                                    </option>
                                    <option value="listening">
                                        <i class="fas fa-headphones mr-2"></i>
                                        Luyện nghe
                                    </option>
                                    <option value="writing">
                                        <i class="fas fa-pen mr-2"></i>
                                        Luyện viết
                                    </option>
                                    <option value="vocabulary">
                                        <i class="fas fa-book mr-2"></i>
                                        Từ vựng
                                    </option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <!-- Documents List -->
                    <% if (classesWithDocs && classesWithDocs.length > 0) { %>
                        <div class="space-y-8" id="documentsContainer">
                            <% classesWithDocs.forEach((classItem, index) => { %>
                                <% if (classItem.documents && classItem.documents.length > 0) { %>
                                    <div class="class-section slide-in fade-in" 
                                         data-class-id="<%= classItem._id %>"
                                         style="animation-delay: <%= index * 0.1 %>s;">
                                        
                                        <!-- Class Header -->
                                        <div class="class-header">
                                            <div class="class-title">
                                                <div class="class-icon">
                                                    <i class="fas fa-graduation-cap"></i>
                                                </div>
                                                <div>
                                                    <%= classItem.course.title %> - <%= classItem.name %>
                                                    <div class="class-meta">
                                                        <span>
                                                            <i class="fas fa-file-alt mr-1"></i>
                                                            <%= classItem.documents.length %> tài liệu
                                                        </span>
                                                        <span>
                                                            <i class="fas fa-clock mr-1"></i>
                                                            Cập nhật gần đây
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Documents Grid -->
                                        <div class="documents-grid">
                                            <% classItem.documents.forEach((doc, docIndex) => { %>
                                                <div class="document-card"
                                                     data-category="<%= doc.category %>"
                                                     style="animation-delay: <%= (index * 0.1) + (docIndex * 0.05) %>s;">
                                                    
                                                    <!-- Document Header -->
                                                    <div class="document-header">
                                                        <!-- File Icon -->
                                                        <% 
                                                        const fileExt = doc.fileName.split('.').pop().toLowerCase();
                                                        let iconClass = '';
                                                        let bgClass = '';
                                                        
                                                        switch(fileExt) {
                                                            case 'pdf':
                                                                iconClass = 'fa-file-pdf';
                                                                bgClass = 'background: linear-gradient(135deg, #ef4444, #f87171);';
                                                                break;
                                                            case 'doc':
                                                            case 'docx':
                                                                iconClass = 'fa-file-word';
                                                                bgClass = 'background: linear-gradient(135deg, #3b82f6, #60a5fa);';
                                                                break;
                                                            case 'xls':
                                                            case 'xlsx':
                                                                iconClass = 'fa-file-excel';
                                                                bgClass = 'background: linear-gradient(135deg, #10b981, #34d399);';
                                                                break;
                                                            case 'ppt':
                                                            case 'pptx':
                                                                iconClass = 'fa-file-powerpoint';
                                                                bgClass = 'background: linear-gradient(135deg, #f97316, #fb923c);';
                                                                break;
                                                            default:
                                                                iconClass = 'fa-file';
                                                                bgClass = 'background: linear-gradient(135deg, #6b7280, #9ca3af);';
                                                        }
                                                        %>
                                                        
                                                        <div class="file-icon-container" style="<%= bgClass %>">
                                                            <i class="fas <%= iconClass %> file-icon text-white"></i>
                                                        </div>

                                                        <!-- Document Info -->
                                                        <div class="document-info">
                                                            <h3 class="document-title">
                                                                <%= doc.title %>
                                                            </h3>
                                                            <p class="document-description">
                                                                <%= doc.description || 'Tài liệu học tập hỗ trợ quá trình học tiếng Hàn hiệu quả.' %>
                                                            </p>
                                                            
                                                            <!-- Category Badge -->
                                                            <% 
                                                            let categoryClass = '';
                                                            let categoryIcon = '';
                                                            let categoryLabel = '';
                                                            
                                                            switch(doc.category) {
                                                                case 'speaking':
                                                                    categoryClass = 'category-speaking';
                                                                    categoryIcon = 'fa-microphone';
                                                                    categoryLabel = 'Luyện nói';
                                                                    break;
                                                                case 'listening':
                                                                    categoryClass = 'category-listening';
                                                                    categoryIcon = 'fa-headphones';
                                                                    categoryLabel = 'Luyện nghe';
                                                                    break;
                                                                case 'writing':
                                                                    categoryClass = 'category-writing';
                                                                    categoryIcon = 'fa-pen';
                                                                    categoryLabel = 'Luyện viết';
                                                                    break;
                                                                default:
                                                                    categoryClass = 'category-vocabulary';
                                                                    categoryIcon = 'fa-book';
                                                                    categoryLabel = 'Từ vựng';
                                                            }
                                                            %>
                                                            
                                                            <span class="category-badge <%= categoryClass %>">
                                                                <i class="fas <%= categoryIcon %>"></i>
                                                                <%= categoryLabel %>
                                                            </span>
                                                        </div>
                                                    </div>

                                                    <!-- Document Actions -->
                                                    <div class="document-actions">
                                                        <a href="/uploads/documents/<%= doc.fileName %>" 
                                                           target="_blank"
                                                           class="action-btn btn-view"
                                                           onclick="trackDocumentView('<%= doc._id %>')">
                                                            <i class="fas fa-eye"></i>
                                                            <span>Xem</span>
                                                        </a>
                                                        
                                                        <a href="/student/documents/<%= doc._id %>/download"
                                                           class="action-btn btn-download"
                                                           onclick="trackDocumentDownload('<%= doc._id %>')">
                                                            <i class="fas fa-download"></i>
                                                            <span>Tải xuống</span>
                                                        </a>
                                                    </div>
                                                </div>
                                            <% }); %>
                                        </div>
                                    </div>
                                <% } %>
                            <% }); %>
                        </div>
                        
                        <!-- No Results State -->
                        <div class="no-results hidden" id="noResults">
                            <div class="no-results-icon">
                                <i class="fas fa-search-minus"></i>
                            </div>
                            <div class="no-results-title">Không tìm thấy tài liệu</div>
                            <div class="no-results-description">
                                Không có tài liệu nào phù hợp với bộ lọc của bạn. Hãy thử điều chỉnh tiêu chí tìm kiếm.
                            </div>
                        </div>
                        
                    <% } else { %>
                        <!-- Empty State -->
                        <div class="empty-state slide-in fade-in">
                            <div class="empty-icon">
                                <i class="fas fa-folder-open"></i>
                            </div>
                            <h3 class="empty-title">Chưa có tài liệu</h3>
                            <p class="empty-description">
                                Hiện tại chưa có tài liệu nào trong các lớp học của bạn. 
                                Các tài liệu sẽ được giảng viên cập nhật trong quá trình học.
                            </p>
                        </div>
                    <% } %>
                </div>
            </main>
        </div>
    </div>
    
    <%- include('../partials/student_footer') %>
    
    <script>
        // Search and Filter Functionality
        const searchInput = document.getElementById('searchInput');
        const classFilter = document.getElementById('classFilter');
        const categoryFilter = document.getElementById('categoryFilter');
        const noResults = document.getElementById('noResults');

        function filterDocuments() {
            const searchTerm = searchInput.value.toLowerCase();
            const selectedClass = classFilter.value;
            const selectedCategory = categoryFilter.value;
            
            let hasVisibleSections = false;

            document.querySelectorAll('.class-section').forEach(section => {
                const classId = section.dataset.classId;
                let hasVisibleDocs = false;

                section.querySelectorAll('.document-card').forEach(card => {
                    const title = card.querySelector('.document-title').textContent.toLowerCase();
                    const description = card.querySelector('.document-description').textContent.toLowerCase();
                    const category = card.dataset.category;

                    const matchesSearch = title.includes(searchTerm) || description.includes(searchTerm);
                    const matchesClass = !selectedClass || classId === selectedClass;
                    const matchesCategory = !selectedCategory || category === selectedCategory;

                    if (matchesSearch && matchesClass && matchesCategory) {
                        card.style.display = '';
                        hasVisibleDocs = true;
                    } else {
                        card.style.display = 'none';
                    }
                });

                if (hasVisibleDocs) {
                    section.style.display = '';
                    hasVisibleSections = true;
                } else {
                    section.style.display = 'none';
                }
            });
            
            // Show/hide no results message
            if (noResults) {
                noResults.classList.toggle('hidden', hasVisibleSections);
            }
            
            // Show notification for search
            if (searchTerm || selectedClass || selectedCategory) {
                const filterCount = [searchTerm, selectedClass, selectedCategory].filter(Boolean).length;
                showNotification(
                    hasVisibleSections ? 
                    `Đã áp dụng ${filterCount} bộ lọc` : 
                    'Không tìm thấy tài liệu phù hợp',
                    hasVisibleSections ? 'info' : 'warning'
                );
            }
        }

        // Track document interactions
        function trackDocumentView(docId) {
            // Track view analytics
            fetch(`/api/documents/${docId}/track`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ action: 'view' })
            }).catch(console.error);
            
            showNotification('Đang mở tài liệu...', 'info');
        }

        function trackDocumentDownload(docId) {
            // Track download analytics
            fetch(`/api/documents/${docId}/track`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ action: 'download' })
            }).catch(console.error);
            
            showNotification('Đang tải xuống tài liệu...', 'success');
        }

        // Notification function
        function showNotification(message, type = 'success') {
            const notification = document.createElement('div');
            notification.className = `fixed top-6 right-6 z-50 px-6 py-4 rounded-lg shadow-lg text-white font-medium transition-all duration-300 transform translate-x-full`;
            
            switch (type) {
                case 'success':
                    notification.className += ' bg-gradient-to-r from-green-500 to-green-600';
                    break;
                case 'error':
                    notification.className += ' bg-gradient-to-r from-red-500 to-red-600';
                    break;
                case 'info':
                    notification.className += ' bg-gradient-to-r from-blue-500 to-blue-600';
                    break;
                case 'warning':
                    notification.className += ' bg-gradient-to-r from-yellow-500 to-yellow-600';
                    break;
            }
            
            notification.innerHTML = `
                <div class="flex items-center gap-3">
                    <i class="fas ${type === 'success' ? 'fa-check-circle' : 
                                   type === 'error' ? 'fa-exclamation-circle' : 
                                   type === 'warning' ? 'fa-exclamation-triangle' :
                                   'fa-info-circle'}"></i>
                    <span>${message}</span>
                </div>
            `;
            
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.classList.remove('translate-x-full');
            }, 100);
            
            setTimeout(() => {
                notification.classList.add('translate-x-full');
                setTimeout(() => notification.remove(), 300);
            }, 3000);
        }

        // Event Listeners
        searchInput.addEventListener('input', debounce(filterDocuments, 300));
        classFilter.addEventListener('change', filterDocuments);
        categoryFilter.addEventListener('change', filterDocuments);

        // Debounce function for search
        function debounce(func, wait) {
            let timeout;
            return function executedFunction(...args) {
                const later = () => {
                    clearTimeout(timeout);
                    func(...args);
                };
                clearTimeout(timeout);
                timeout = setTimeout(later, wait);
            };
        }

        // Initialize animations
        document.addEventListener('DOMContentLoaded', function() {
            // Add staggered animations
            const elements = document.querySelectorAll('.slide-in');
            elements.forEach((el, index) => {
                el.style.animationDelay = `${index * 0.1}s`;
            });

            // Smooth scroll for document cards
            document.querySelectorAll('.document-card').forEach(card => {
                card.addEventListener('click', function(e) {
                    if (!e.target.closest('.document-actions')) {
                        // Click outside actions - show document preview
                        const title = this.querySelector('.document-title').textContent;
                        showNotification(`Xem tài liệu: ${title}`, 'info');
                    }
                });
            });
        });

        // Keyboard shortcuts
        document.addEventListener('keydown', function(e) {
            // Ctrl/Cmd + K to focus search
            if ((e.ctrlKey || e.metaKey) && e.key === 'k') {
                e.preventDefault();
                searchInput.focus();
                searchInput.select();
            }
            
            // Escape to clear search
            if (e.key === 'Escape' && document.activeElement === searchInput) {
                searchInput.value = '';
                filterDocuments();
            }
        });
    </script>
</body>
</html>