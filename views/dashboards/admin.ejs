        function initializeCharts() {
            // Get real data from window object (will be populated by server)
            const userRegistrationData = window.dashboardData ? window.dashboardData.userRegistrations : [
                { _id: { year: 2024, month: 7, day: 1 }, count: 12 },
                { _id: { year: 2024, month: 7, day: 5 }, count: 19 },
                { _id: { year: 2024, month: 7, day: 10 }, count: 25 },
                { _id: { year: 2024, month: 7, day: 15 }, count: 32 },
                { _id: { year: 2024, month: 7, day: 20 }, count: 28 },
                { _id: { year: 2024, month: 7, day: 25 }, count: 35 },
                { _id: { year: 2024, month: 7, day: 29 }, count: 42 }
            ];

            // Process chart data
            const userLabels = userRegistrationData.map(item => {
                if (item._id.day) {
                    return item._id.day + '/' + item._id.month;
                } else {
                    return item._id.month + '/' + item._id.year;
                }
            });
            const userData = userRegistrationData.map(item => item.count);

            // User Registration Chart
            const userCtx = document.getElementById('userChart');
            if (userCtx) {
                new Chart(userCtx, {
                    type: 'line',
                    data: {
                        labels: userLabels,
                        datasets: [{
                            label: 'Đăng ký mới',
                            data: userData,
                            borderColor: 'rgb(59, 130, 246)',
                            backgroundColor: 'rgba(59, 130, 246, 0.1)',
                            borderWidth: 3,
                            fill: true,
                            tension: 0.4,
                            pointRadius: 6,
                            pointHoverRadius: 8,
                            pointBackgroundColor: '#ffffff',
                            pointBorderColor: 'rgb(59, 130, 246)',
                            pointBorderWidth: 2
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        layout: {
                            padding: {
                                top: 10,
                                bottom: 10
                            }
                        },
                        scales: {
                            y: {
                                beginAtZero: true,
                                grid: {
                                    color: 'rgba(0, 0, 0, 0.05)'
                                },
                                ticks: {
                                    color: '#6b7280',
                                    maxTicksLimit: 6
                                }
                            },
                            x: {
                                grid: {
                                    display: false
                                },
                                ticks: {
                                    color: '#6b7280'
                                }
                            }
                        },
                        plugins: {
                            legend: {
                                display: false
                            }
                        },
                        elements: {
                            line: {
                                borderCapStyle: 'round'
                            }
                        }
                    }
                });
            }

            // Revenue Chart
            const revenueCtx = document.getElementById('revenueChart');
            if (revenueCtx) {
                new Chart(revenueCtx, {
                    type: 'bar',
                    data: {
                        labels: ['T1', 'T2', 'T3', 'T4', 'T5', 'T6', 'T7'],
                        datasets: [{
                            label: 'Doanh thu (VNĐ)',
                            data: [5500000, 7200000, 6800000, 8100000, 7500000, 9200000, 8900000],
                            backgroundColor: [
                                'rgba(16, 185, 129, 0.8)',
                                'rgba(34, 197, 94, 0.8)',
                                'rgba(52, 211, 153, 0.8)',
                                'rgba(16, 185, 129, 0.8)',
                                'rgba(34, 197, 94, 0.8)',
                                'rgba(52, 211, 153, 0.8)',
                                'rgba(16, 185, 129, 0.8)'
                            ],
                            borderColor: [
                                'rgb(16, 185, 129)',
                                'rgb(34, 197, 94)',
                                'rgb(52, 211, 153)',
                                'rgb(16, 185, 129)',
                                'rgb(34, 197, 94)',
                                'rgb(52, 211, 153)',
                                'rgb(16, 185, 129)'
                            ],
                            borderWidth: 2,
                            borderRadius: 8,
                            borderSkipped: false
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        layout: {
                            padding: {
                                top: 10,
                                bottom: 10
