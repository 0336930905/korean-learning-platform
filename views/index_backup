    <!-- Enhanced JavaScript -->
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        // Initialize AOS Animation
        AOS.init({
            duration: 1000,
            easing: 'ease-out-cubic',
            once: true,
            offset: 120
        });

        // Header scroll effect
        window.addEventListener('scroll', () => {
            const header = document.getElementById('header');
            if (window.scrollY > 100) {
                header.classList.add('scrolled');
            } else {
                header.classList.remove('scrolled');
            }
        });

        // Smooth scroll for navigation links
        document.querySelectorAll('.nav-link-korean').forEach(link => {
            link.addEventListener('click', (e) => {
                e.preventDefault();
                const targetId = link.getAttribute('href');
                const targetElement = document.querySelector(targetId);
                
                if (targetElement) {
                    const offsetTop = targetElement.offsetTop - 80;
                    window.scrollTo({
                        top: offsetTop,
                        behavior: 'smooth'
                    });
                }
            });
        });

        // Course detail function
        function viewCourseDetail(courseId) {
            if (courseId) {
                window.location.href = `/courses/${courseId}`;
            } else {
                // For default courses
                alert('üá∞üá∑ Kh√≥a h·ªçc ƒëang ƒë∆∞·ª£c c·∫≠p nh·∫≠t! Vui l√≤ng ƒëƒÉng k√Ω ƒë·ªÉ nh·∫≠n th√¥ng b√°o s·ªõm nh·∫•t.');
            }
        }

        // Add floating Korean characters animation
        function createKoreanFloatingElements() {
            const symbols = ['Ìïú', 'Íµ≠', 'Ïñ¥', 'ÏÇ¨', 'Îûë', 'Î¨∏', 'Ìôî', 'ÏÑú', 'Ïö∏'];
            const container = document.querySelector('.floating-elements');
            
            if (container) {
                setInterval(() => {
                    const symbol = document.createElement('div');
                    symbol.className = 'korean-symbol';
                    symbol.textContent = symbols[Math.floor(Math.random() * symbols.length)];
                    symbol.style.left = Math.random() * 100 + '%';
                    symbol.style.animationDuration = (Math.random() * 4 + 4) + 's';
                    
                    container.appendChild(symbol);
                    
                    setTimeout(() => {
                        symbol.remove();
                    }, 8000);
                }, 3000);
            }
        }

        // Initialize floating elements
        createKoreanFloatingElements();

        // Add Korean greeting on page load
        document.addEventListener('DOMContentLoaded', () => {
            console.log('üá∞üá∑ ÏïàÎÖïÌïòÏÑ∏Ïöî! ÌïúÍµ≠Ïñ¥Î•º Ìï®Íªò Î∞∞ÏõåÏöî!');
        });
    </script>
