                                <button onclick="importCourses()" 
                                        class="action-button px-4 py-2 bg-white/20 backdrop-blur-sm rounded-lg hover:bg-white/30 transition-all">
                                    <i class="fas fa-upload mr-2"></i>
                                    Nhập khóa học
                                </button>
                                <button id="showAddFormBtn" 
