<script>
        // ACCOUNT LOCK FUNCTIONALITY
        window.ACCOUNT_LOCK = {
            modal: null,
            reasonInput: null,
            currentUserId: null,

            init() {
                this.modal = document.getElementById('blockUserModal');
                this.reasonInput = document.getElementById('blockReason');
                console.log('‚úÖ Account lock system initialized');
                return true;
            },

            show(userId) {
                this.currentUserId = userId;
                this.reasonInput.value = '';
                this.modal.classList.remove('hidden');
                this.reasonInput.focus();
                console.log('üîí Showing block modal for user:', userId);
            },

            hide() {
                this.modal.classList.add('hidden');
                this.currentUserId = null;
                console.log('‚ùå Block modal hidden');
            },

            async confirmBlock() {
                const reason = this.reasonInput.value.trim();
                
                if (!reason) {
                    this.showToast('Vui l√≤ng nh·∫≠p l√Ω do kh√≥a t√†i kho·∫£n', 'warning');
                    return;
                }

                if (!this.currentUserId) {
                    this.showToast('Kh√¥ng t√¨m th·∫•y ID ng∆∞·ªùi d√πng', 'error');
                    return;
                }

                console.log('üîÑ Sending block request...', { userId: this.currentUserId, reason });

                try {
                    const response = await fetch(`/account-management/toggle-status/${this.currentUserId}`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ 
                            blockReason: reason 
                        })
                    });

                    const data = await response.json();
                    console.log('üì® Server response:', data);

                    if (response.ok && data.success) {
                        this.showToast(data.message || 'ƒê√£ kh√≥a t√†i kho·∫£n th√†nh c√¥ng', 'success');
                        this.hide();
                        setTimeout(() => {
                            window.location.reload();
                        }, 2000);
                    } else {
                        this.showToast(data.message || 'C√≥ l·ªói x·∫£y ra khi kh√≥a t√†i kho·∫£n', 'error');
                    }
                } catch (error) {
                    console.error('‚ùå Network error:', error);
                    this.showToast('L·ªói k·∫øt n·ªëi. Vui l√≤ng th·ª≠ l·∫°i.', 'error');
                }
            },

            showToast(message, type = 'info') {
                const toastContainer = document.getElementById('toastContainer');
                const toastId = 'toast-' + Date.now();
                
                const bgColors = {
                    success: 'bg-green-500',
                    error: 'bg-red-500', 
                    warning: 'bg-yellow-500',
                    info: 'bg-blue-500'
                };
                
                const toast = document.createElement('div');
                toast.id = toastId;
                toast.className = `${bgColors[type]} text-white px-6 py-3 rounded-lg shadow-lg mb-2 toast-enter max-w-sm`;
                toast.innerHTML = `
                    <div class="flex items-center justify-between">
                        <span class="flex-1">${message}</span>
                        <button onclick="document.getElementById('${toastId}').remove()" class="text-white hover:text-gray-200 ml-4">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                `;
                
                toastContainer.appendChild(toast);
                
                // Auto remove after 5 seconds
                setTimeout(() => {
                    toast.classList.remove('toast-enter');
                    toast.classList.add('toast-exit');
                    setTimeout(() => toast.remove(), 300);
                }, 5000);
            }
        };

