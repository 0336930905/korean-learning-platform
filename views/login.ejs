<style>
/* ==== ENHANCED LOGIN PAGE STYLES ==== */
:root {
    --primary-korea: linear-gradient(135deg, #FF6B9D 0%, #C44EFF 50%, #4ECDC4 100%);
    --secondary-korea: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    --accent-blue: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
    --accent-pink: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
    --dark-elegant: linear-gradient(135deg, #0f0f23 0%, #1a1a2e 50%, #16213e 100%);
    --glass-premium: rgba(255, 255, 255, 0.1);
    --glass-border: rgba(255, 255, 255, 0.15);
    --glass-hover: rgba(255, 255, 255, 0.2);
    --text-white: #ffffff;
    --text-light: rgba(255, 255, 255, 0.9);
    --text-muted: rgba(255, 255, 255, 0.7);
    --shadow-premium: 0 25px 80px rgba(0, 0, 0, 0.4);
    --shadow-glow: 0 0 40px rgba(79, 172, 254, 0.3);
    --transition-smooth: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    --transition-bounce: all 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55);
}
body{
    background: linear-gradient(135deg, #0f0f23 0%, #1a1a2e 50%, #16213e 100%);
}
/* Main Login Container */
.login-section-ultimate {
    min-height: 100vh;
    padding: 20px 0 60px;
    background: var(--dark-elegant);
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
}

/* Enhanced Background Effects */
.login-bg-effects {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    z-index: 1;
}

.gradient-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.15;
    animation: orbFloat 12s ease-in-out infinite;
}

.orb-1 {
    width: 400px;
    height: 400px;
    background: var(--primary-korea);
    top: -10%;
    left: -10%;
    animation-delay: 0s;
}

.orb-2 {
    width: 300px;
    height: 300px;
    background: var(--accent-blue);
    top: 20%;
    right: -5%;
    animation-delay: 4s;
}

.orb-3 {
    width: 350px;
    height: 350px;
    background: var(--accent-pink);
    bottom: -10%;
    left: 30%;
    animation-delay: 8s;
}

/* Floating Korean Characters */
.korean-bg-chars {
    position: absolute;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 2;
}

.korean-char-bg {
    position: absolute;
    font-size: 8rem;
    font-weight: 900;
    background: var(--primary-korea);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    opacity: 0.08;
    animation: koreanFloat 25s linear infinite;
}

/* Enhanced Form Container */
.form-login-ultimate {
    position: relative;
    z-index: 10;
    width: 90%;
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1.2fr 0.8fr;
    gap: 0;
    min-height: 60vh;
    border-radius: 30px;
    background: var(--glass-premium);
    backdrop-filter: blur(25px);
    border: 1px solid var(--glass-border);
    box-shadow: var(--shadow-premium);
    overflow: hidden;
}

/* Left Panel - Enhanced */
.form-login--left-ultimate {
    background: var(--primary-korea);
    padding: 2.5rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    position: relative;
    overflow: hidden;
    border-radius: 25px 0 0 25px;
}

.form-login--left-ultimate::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: url('data:image/svg+xml,<svg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"><g fill="none" fill-rule="evenodd"><g fill="%23ffffff" fill-opacity="0.05"><circle cx="30" cy="30" r="4"/></g></svg>');
    animation: patternMove 20s linear infinite;
}
.voice-search-container{
    margin-top: 25px;
    margin-bottom: 25px;
}
.brand-logo-ultimate {
    font-size: 2.5rem;
    font-weight: 900;
    color: white;
    margin-bottom: 1rem;
    text-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    position: relative;
    z-index: 2;
}

.korean-characters-ultimate {
    display: flex;
    gap: 1rem;
    margin: 1.5rem 0;
    position: relative;
    z-index: 2;
}

.korean-character-ultimate {
    width: 80px;
    height: 80px;
    background: rgba(255, 255, 255, 0.15);
    border: 2px solid rgba(255, 255, 255, 0.2);
    border-radius: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    font-weight: 900;
    color: white;
    backdrop-filter: blur(10px);
    animation: charFloat 6s ease-in-out infinite;
    transition: var(--transition-bounce);
}

.korean-character-ultimate:nth-child(2) { animation-delay: 2s; }
.korean-character-ultimate:nth-child(3) { animation-delay: 4s; }

.korean-character-ultimate:hover {
    transform: scale(1.1) rotateY(15deg);
    background: rgba(255, 255, 255, 0.25);
}

.welcome-text-ultimate {
    font-size: 1.8rem;
    font-weight: 700;
    color: white;
    margin: 1rem 0 0.5rem;
    text-shadow: 0 5px 20px rgba(0, 0, 0, 0.3);
    position: relative;
    z-index: 2;
}

.description-ultimate {
    font-size: 1rem;
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.6;
    margin-bottom: 1.5rem;
    max-width: 400px;
    position: relative;
    z-index: 2;
}

.toggle-form-btn-ultimate {
    padding: 1rem 2.5rem;
    background: rgba(255, 255, 255, 0.2);
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-radius: 50px;
    color: white;
    font-weight: 700;
    font-size: 1.1rem;
    cursor: pointer;
    transition: var(--transition-bounce);
    backdrop-filter: blur(10px);
    position: relative;
    z-index: 2;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.toggle-form-btn-ultimate:hover {
    background: rgba(255, 255, 255, 0.3);
    transform: translateY(-3px) scale(1.05);
    box-shadow: 0 15px 40px rgba(255, 255, 255, 0.2);
}

/* Right Panel - Form */
.form-login--right-ultimate {
    padding: 2.5rem 2rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(15px);
    position: relative;
}

.form-container-ultimate {
    width: 100%;
    max-width: 400px;
    margin: 0 auto;
}

.form-title-ultimate {
    font-size: 2rem;
    font-weight: 900;
    background: var(--primary-korea);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-align: center;
    margin-bottom: 2rem;
    position: relative;
}

.form-title-ultimate::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 4px;
    background: var(--primary-korea);
    border-radius: 2px;
}

/* Enhanced Form Groups */
.form-group-ultimate {
    position: relative;
    margin-bottom: 2.5rem;
}

.main-input-ultimate {
    width: 100%;
    padding: 1.2rem 1.5rem;
    background: var(--glass-premium);
    border: 2px solid var(--glass-border);
    border-radius: 15px;
    color: var(--text-white);
    font-size: 1rem;
    font-weight: 500;
    backdrop-filter: blur(10px);
    transition: var(--transition-smooth);
    outline: none;
}

.main-input-ultimate::placeholder {
    color: var(--text-muted);
}

.main-input-ultimate:focus {
    border-color: #4facfe;
    background: var(--glass-hover);
    box-shadow: 0 0 0 3px rgba(79, 172, 254, 0.1);
    transform: translateY(-2px);
}

/* Style cho select dropdown */
.main-input-ultimate[type="select"],
select.main-input-ultimate {
    appearance: none;
    -webkit-appearance: none;
    -moz-appearance: none;
    background-image: url("data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='none' stroke='rgba(255,255,255,0.7)' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'%3e%3cpolyline points='6,9 12,15 18,9'%3e%3c/polyline%3e%3c/svg%3e");
    background-repeat: no-repeat;
    background-position: right 1rem center;
    background-size: 1rem;
    cursor: pointer;
}

select.main-input-ultimate option {
    background: #1a1a2e;
    color: white;
    padding: 0.5rem;
}

.label-ultimate {
    position: absolute;
    left: 1.5rem;
    top: 1.2rem;
    color: var(--text-muted);
    font-size: 1rem;
    font-weight: 500;
    pointer-events: none;
    transition: var(--transition-smooth);
    background: transparent;
    padding: 0 0.5rem;
}

.main-input-ultimate:focus + .label-ultimate,
.main-input-ultimate:not(:placeholder-shown) + .label-ultimate {
    top: -0.5rem;
    left: 1rem;
    font-size: 0.8rem;
    color: #4facfe;
    background: var(--dark-elegant);
}

.highlight-span-ultimate {
    position: absolute;
    bottom: 0;
    left: 0;
    height: 2px;
    width: 0;
    background: var(--accent-blue);
    transition: var(--transition-smooth);
}

.main-input-ultimate:focus ~ .highlight-span-ultimate {
    width: 100%;
}

/* Enhanced Buttons */
.btn-login-ultimate {
    width: 100%;
    padding: 1.2rem;
    background: var(--primary-korea);
    border: none;
    border-radius: 15px;
    color: white;
    font-size: 1.1rem;
    font-weight: 700;
    cursor: pointer;
    transition: var(--transition-bounce);
    margin: 1rem 0;
    position: relative;
    overflow: hidden;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.btn-login-ultimate::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: var(--transition-smooth);
}

.btn-login-ultimate:hover::before {
    left: 100%;
}

.btn-login-ultimate:hover {
    transform: translateY(-3px) scale(1.02);
    box-shadow: 0 15px 40px rgba(255, 107, 157, 0.4);
}

/* Google Login Button */
.btn-login-gg-ultimate {
    width: 100%;
    padding: 1rem;
    background: white;
    border: 2px solid #e0e0e0;
    border-radius: 15px;
    color: #333;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: var(--transition-bounce);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.8rem;
    margin-bottom: 2rem;
    text-decoration: none;
}

.btn-login-gg-ultimate:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    border-color: #4285f4;
    color: #333;
    text-decoration: none;
}

.google-icon {
    width: 24px;
    height: 24px;
}

/* Form Links */
.auth-links {
    text-align: center;
    margin-top: 2rem;
}

.forgot-password-link {
    color: var(--text-light);
    text-decoration: none;
    font-weight: 500;
    transition: var(--transition-smooth);
    position: relative;
}

.forgot-password-link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--primary-korea);
    transition: width 0.3s ease;
}

.forgot-password-link:hover {
    color: white;
    text-decoration: none;
}

.forgot-password-link:hover::after {
    width: 100%;
}

/* Alert Messages */
.alert-ultimate {
    padding: 1rem 1.5rem;
    border-radius: 10px;
    margin-bottom: 1.5rem;
    font-weight: 500;
    animation: alertSlide 0.5s ease;
    position: relative;
    border: none;
}

.alert-success {
    background: rgba(16, 185, 129, 0.1);
    border: 1px solid rgba(16, 185, 129, 0.3);
    color: #10b981;
}

.alert-danger {
    background: rgba(239, 68, 68, 0.1);
    border: 1px solid rgba(239, 68, 68, 0.3);
    color: #ef4444;
}

.alert-info {
    background: rgba(79, 172, 254, 0.1);
    border: 1px solid rgba(79, 172, 254, 0.3);
    color: #4facfe;
}

/* ==== ANIMATIONS ==== */
@keyframes orbFloat {
    0%, 100% { transform: translateY(0px) scale(1); }
    33% { transform: translateY(-30px) scale(1.1); }
    66% { transform: translateY(20px) scale(0.9); }
}

@keyframes koreanFloat {
    0% { transform: translateY(100vh) rotateZ(0deg); opacity: 0; }
    5% { opacity: 0.08; }
    95% { opacity: 0.08; }
    100% { transform: translateY(-100px) rotateZ(360deg); opacity: 0; }
}

@keyframes charFloat {
    0%, 100% { transform: translateY(0px) rotateX(0deg); }
    50% { transform: translateY(-10px) rotateX(5deg); }
}

@keyframes patternMove {
    0% { transform: translateX(0); }
    100% { transform: translateX(60px); }
}

@keyframes alertSlide {
    0% { transform: translateY(-20px); opacity: 0; }
    100% { transform: translateY(0); opacity: 1; }
}

/* ==== RESPONSIVE DESIGN ==== */
@media (max-width: 1024px) {
    .form-login-ultimate {
        max-width: 900px;
        grid-template-columns: 1fr 1fr;
    }
    
    .form-login--left-ultimate {
        padding: 3rem 2rem;
    }
    
    .korean-character-ultimate {
        width: 80px;
        height: 80px;
        font-size: 2rem;
    }
}

@media (max-width: 768px) {
    .form-login-ultimate {
        grid-template-columns: 1fr;
        max-width: 500px;
        min-height: auto;
    }
    
    .form-login--left-ultimate {
        border-radius: 25px 25px 0 0;
        padding: 3rem 2rem 2rem;
    }
    
    .form-login--right-ultimate {
        padding: 2rem 1.5rem;
    }
    
    .korean-characters-ultimate {
        gap: 0.8rem;
        margin: 1rem 0;
    }
    
    .korean-character-ultimate {
        width: 60px;
        height: 60px;
        font-size: 1.5rem;
    }
    
    .brand-logo-ultimate {
        font-size: 2.5rem;
    }
    
    .welcome-text-ultimate {
        font-size: 1.8rem;
    }
}

@media (max-width: 480px) {
    .form-login-ultimate {
        margin: 1rem;
        padding: 1rem;
    }
    
    .form-login--left-ultimate,
    .form-login--right-ultimate {
        padding: 2rem 1.5rem;
    }
}
</style>

