            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Loading state for upload */
        .uploading {
            pointer-events: none;
            opacity: 0.7;
        }

        .uploading .file-upload-label {
            animation: pulse 2s infinite;
        }
    </style>
