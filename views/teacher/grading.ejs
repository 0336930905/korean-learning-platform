<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tạo bài kiểm tra | Giảng viên</title>
    <link rel="stylesheet" href="/style/style.css">
    <link rel="stylesheet" href="/style/teacher.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        .glass-card {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.3);
        }
        
        .gradient-bg {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        
        .card-hover {
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }
        
        .card-hover:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
        }
        
        .floating-animation {
            animation: float 3s ease-in-out infinite;
        }
        
        @keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-8px); }
        }
        
        .slide-in {
            animation: slideIn 0.6s ease-out forwards;
        }
        
        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .gradient-text {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }
        
        .btn-3d {
            position: relative;
            transform-style: preserve-3d;
            transition: all 0.3s ease;
        }
        
        .btn-3d:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
        }
        
        .stats-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(15px);
            border: 1px solid rgba(255, 255, 255, 0.3);
            border-radius: 20px;
            padding: 24px;
            position: relative;
            overflow: hidden;
        }
        
        .stats-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 4px;
        }
        
        .stats-pending::before {
            background: linear-gradient(90deg, #f59e0b, #fbbf24);
        }
        
        .stats-graded::before {
            background: linear-gradient(90deg, #10b981, #34d399);
        }
        
        .stats-tests::before {
            background: linear-gradient(90deg, #8b5cf6, #a855f7);
        }
        
        .stats-total::before {
            background: linear-gradient(90deg, #3b82f6, #60a5fa);
        }
        
        .stats-icon {
            width: 60px;
            height: 60px;
            border-radius: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 24px;
            margin-bottom: 16px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }
        
        .icon-pending {
            background: linear-gradient(135deg, #f59e0b, #fbbf24);
        }
        
        .icon-graded {
            background: linear-gradient(135deg, #10b981, #34d399);
        }
        
        .icon-tests {
            background: linear-gradient(135deg, #8b5cf6, #a855f7);
        }
        
        .icon-total {
            background: linear-gradient(135deg, #3b82f6, #60a5fa);
        }
        
        .class-selector {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            border: 2px solid rgba(102, 126, 234, 0.2);
            border-radius: 12px;
            padding: 12px 16px;
            transition: all 0.3s ease;
        }
        
        .class-selector:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
            transform: scale(1.02);
        }
        
        .enhanced-table {
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
        }
        
        .table-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }
        
        .submission-row {
            transition: all 0.3s ease;
            position: relative;
        }
        
        .submission-row:hover {
            background: linear-gradient(90deg, rgba(102, 126, 234, 0.05), transparent);
            transform: scale(1.01);
        }
        
        .submission-row::after {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            height: 100%;
            width: 4px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            opacity: 0;
            transition: opacity 0.3s ease;
        }
        
        .submission-row:hover::after {
            opacity: 1;
        }
        
        .student-avatar {
            width: 48px;
            height: 48px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
            font-size: 18px;
            margin-right: 16px;
            flex-shrink: 0;
        }
        
        .file-badge {
            display: inline-flex;
            align-items: center;
            padding: 6px 12px;
            background: linear-gradient(135deg, #10b981, #34d399);
            color: white;
            border-radius: 20px;
            font-size: 14px;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(16, 185, 129, 0.3);
        }
        
        .file-badge:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(16, 185, 129, 0.4);
        }
        
        .grade-button {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            border: none;
            border-radius: 12px;
            padding: 12px 24px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
            position: relative;
            overflow: hidden;
        }
        
        .grade-button::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 50%;
            transition: all 0.4s ease;
            transform: translate(-50%, -50%);
        }
        
        .grade-button:hover::before {
            width: 200%;
            height: 200%;
        }
        
        .grade-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
        }
        
        .modal-backdrop {
            background: rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(8px);
            animation: fadeIn 0.3s ease;
        }
        
        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }
        
        .modal-content {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(15px);
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.2);
            animation: modalSlideIn 0.3s ease;
        }
        
        @keyframes modalSlideIn {
            from {
                opacity: 0;
                transform: scale(0.9) translateY(-50px);
            }
            to {
                opacity: 1;
                transform: scale(1) translateY(0);
            }
        }
        
        .modal-input {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            border: 2px solid rgba(102, 126, 234, 0.2);
            border-radius: 12px;
            padding: 12px 16px;
            transition: all 0.3s ease;
        }
        
        .modal-input:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
            transform: scale(1.02);
            outline: none;
        }
        
        .empty-state {
            text-align: center;
            padding: 80px 40px;
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            border: 2px dashed rgba(102, 126, 234, 0.3);
        }
        
        .empty-icon {
            font-size: 80px;
            color: #d1d5db;
            margin-bottom: 24px;
        }
        
        .header-icon {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 32px;
            margin-bottom: 24px;
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
        }
        
        .class-header {
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
            border-left: 4px solid #667eea;
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 24px;
        }
        
        .notification {
            position: fixed;
            top: 24px;
            right: 24px;
            padding: 16px 24px;
            border-radius: 12px;
            color: white;
            font-weight: 600;
            z-index: 10000;
            transform: translateX(100%);
            transition: transform 0.3s ease;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        }
        
        .notification.show {
            transform: translateX(0);
        }
        
        .notification.success {
            background: linear-gradient(135deg, #10b981, #34d399);
        }
        
        .notification.error {
            background: linear-gradient(135deg, #ef4444, #f87171);
        }
        
        .score-input {
            text-align: center;
            font-size: 18px;
            font-weight: bold;
        }
        
        .fade-in {
            animation: fadeIn 0.8s ease-out forwards;
        }
        
        .pulse-animation {
            animation: pulse 2s infinite;
        }
        
        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.7; }
        }
        
        .quick-actions {
            display: flex;
            gap: 12px;
            margin-top: 16px;
        }
        
        .quick-score {
            background: rgba(102, 126, 234, 0.1);
            border: 2px solid rgba(102, 126, 234, 0.2);
            color: #667eea;
            padding: 8px 12px;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
            font-weight: 600;
        }
        
        .quick-score:hover {
            background: #667eea;
            color: white;
            transform: scale(1.1);
        }
        
        .submission-status {
            display: inline-flex;
            align-items: center;
            padding: 4px 8px;
            border-radius: 12px;
            font-size: 12px;
            font-weight: 600;
        }
        
        .status-pending {
            background: linear-gradient(135deg, #fef3c7, #fde68a);
            color: #92400e;
        }
        
        .status-late {
            background: linear-gradient(135deg, #fee2e2, #fecaca);
            color: #991b1b;
        }
    </style>
</head>
<body class="bg-gradient-to-br from-blue-50 via-purple-50 to-pink-50 min-h-screen">
    <div class="flex h-screen bg-gradient-to-br from-blue-50 via-purple-50 to-pink-50">
        <%- include('../partials/teacher_sidebar') %>

        <div class="flex-1 flex flex-col overflow-hidden">
            <%- include('../partials/dashboards_header') %>

            <main class="flex-1 overflow-x-hidden overflow-y-auto p-6">
                <!-- Hero Section -->
                <div class="text-center mb-8 slide-in">
                    <div class="header-icon floating-animation mx-auto">
                        <i class="fas fa-pen-alt"></i>
                    </div>
                    <h1 class="text-4xl font-bold gradient-text mb-4">Tạo bài kiểm tra</h1>
                    <p class="text-xl text-gray-600">Đánh giá và phản hồi bài kiểm tra của học viên</p>
                </div>

                <!-- Enhanced Stats Section -->
                <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
                    <!-- Bài chờ chấm -->
                    <div class="stats-card stats-pending card-hover slide-in">
                        <div class="stats-icon icon-pending floating-animation">
                            <i class="fas fa-hourglass-half"></i>
                        </div>
                        <h3 class="text-lg font-semibold text-gray-700 mb-2">Bài chờ chấm</h3>
                        <p class="text-3xl font-bold text-yellow-600 mb-2">
                            <%= typeof pendingSubmissions !== 'undefined' ? pendingSubmissions.length : 0 %>
                        </p>
                        <p class="text-sm text-gray-500">Cần xem xét</p>
                    </div>

                    <!-- Bảng điểm theo lớp -->
                    <div class="stats-card stats-total card-hover slide-in" style="animation-delay: 0.1s;">
                        <div class="stats-icon icon-total floating-animation" style="animation-delay: 0.5s;">
                            <i class="fas fa-table"></i>
                        </div>
                        <h3 class="text-lg font-semibold text-gray-700 mb-2">
                            <a href="/teacher/grade-list" class="hover:text-blue-600 transition-colors">
                                Bảng điểm lớp
                            </a>
                        </h3>
                        <p class="text-3xl font-bold text-blue-600 mb-2">
                            <%= typeof classes !== 'undefined' ? classes.length : 0 %>
                        </p>
                        <p class="text-sm text-gray-500">Lớp học</p>
                    </div>

                    <!-- Đã chấm điểm -->


                    <!-- Điểm Kiểm Tra -->
                    <div class="stats-card stats-tests card-hover slide-in" style="animation-delay: 0.3s;">
                        <div class="stats-icon icon-tests floating-animation pulse-animation" style="animation-delay: 1.5s;">
                            <i class="fas fa-file-alt"></i>
                        </div>
                        <h3 class="text-lg font-semibold text-gray-700 mb-2">
                            <a href="/teacher/classTests" class="hover:text-purple-600 transition-colors">
                                Tạo bài Kiểm Tra
                            </a>
                        </h3>
                        <p class="text-3xl font-bold text-purple-600 mb-2">
                            <%= typeof gradedSubmissions !== 'undefined' ? gradedSubmissions.length : 0 %>
                        </p>
                        <p class="text-sm text-gray-500">Bài kiểm tra</p>
                    </div>
                </div>

                <!-- Class Selector -->
                <% if (classes && classes.length > 0) { %>
                    <div class="glass-card rounded-2xl p-6 mb-8 slide-in card-hover">
                        <div class="flex items-center justify-between">
                            <div class="flex-1">
                                <label for="classSelector" class="block text-lg font-semibold text-gray-800 mb-3">
                                    <i class="fas fa-chalkboard-teacher text-blue-500 mr-2"></i>
                                    Chọn lớp học để xem thống kê:
                                </label>
                                <div class="flex items-center space-x-4">
                                    <select id="classSelector" 
                                            class="class-selector flex-1 lg:flex-none lg:w-96 focus:outline-none">
                                        <option value="">🎯 -- Chọn lớp học --</option>
                                        <% classes.forEach(function(class_) { %>
                                            <option value="<%= class_._id %>" 
                                                    <%= (locals.classId && locals.classId.toString() === class_._id.toString()) ? 'selected' : '' %>>
                                                📚 <%= class_.course.title %> - <%= class_.name %>
                                            </option>
                                        <% }); %>
                                    </select>
                                    <a href="http://localhost:3996/teacher/assignments" 
                                       class="btn-3d bg-gradient-to-r from-green-500 to-green-600 text-white px-6 py-3 rounded-xl font-semibold shadow-lg hover:shadow-xl transition-all duration-300">
                                        <i class="fas fa-tasks mr-2"></i>
                                        Chấm điểm bài tập
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } %>

                <!-- Main Content -->
                <div class="enhanced-table glass-card slide-in fade-in">
                    <% if (classes && classes.length > 0) { %>
                        <% classes.forEach((classItem, classIndex) => { %>
                            <div class="slide-in" style="animation-delay: <%= classIndex * 0.1 %>s;">
                                <div class="class-header">
                                    <div class="flex items-center justify-between">
                                        <div>
                                            <h3 class="text-2xl font-bold text-gray-800 mb-2">
                                                <i class="fas fa-graduation-cap text-purple-500 mr-2"></i>
                                                <%= classItem.course.title %> - <%= classItem.name %>
                                            </h3>
                                            <% const classSubmissions = pendingSubmissions.filter(sub => 
                                                sub.assignment.class._id.toString() === classItem._id.toString()
                                            ) %>
                                            <p class="text-gray-600">
                                                <i class="fas fa-tasks mr-2"></i>
                                                <%= classSubmissions.length %> bài tập chờ chấm điểm
                                            </p>
                                        </div>
                                        
                                    </div>
                                </div>
                                
                                <% if (classSubmissions.length > 0) { %>
                                    <div class="overflow-x-auto">
                                        <table class="min-w-full">
                                            <thead class="table-header">
                                                <tr>
                                                    <th class="px-6 py-4 text-left text-sm font-bold text-white uppercase tracking-wider">
                                                        <i class="fas fa-user-graduate mr-2"></i>
                                                        Học viên
                                                    </th>
                                                    <th class="px-6 py-4 text-left text-sm font-bold text-white uppercase tracking-wider">
                                                        <i class="fas fa-tasks mr-2"></i>
                                                        Bài tập
                                                    </th>
                                                    <th class="px-6 py-4 text-left text-sm font-bold text-white uppercase tracking-wider">
                                                        <i class="fas fa-calendar-alt mr-2"></i>
                                                        Ngày nộp
                                                    </th>
                                                    <th class="px-6 py-4 text-center text-sm font-bold text-white uppercase tracking-wider">
                                                        <i class="fas fa-info-circle mr-2"></i>
                                                        Trạng thái
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody class="bg-white divide-y divide-gray-100">
                                                <% classSubmissions.forEach((submission, submissionIndex) => { %>
                                                    <%
                                                    const dueDate = new Date(submission.assignment.dueDate);
                                                    const submitDate = new Date(submission.submittedAt);
                                                    const isLate = submitDate > dueDate;
                                                    %>
                                                    <tr class="submission-row slide-in" data-submission="<%= submission._id %>" style="animation-delay: <%= (classIndex * 0.1) + (submissionIndex * 0.05) %>s;">
                                                        <td class="px-6 py-4 whitespace-nowrap">
                                                            <div class="flex items-center">
                                                                <div class="student-avatar floating-animation" style="animation-delay: <%= submissionIndex * 0.1 %>s;">
                                                                    <%= submission.student.fullName.charAt(0).toUpperCase() %>
                                                                </div>
                                                                <div>
                                                                    <div class="text-lg font-semibold text-gray-900">
                                                                        <%= submission.student.fullName %>
                                                                    </div>
                                                                    <div class="text-sm text-gray-500">
                                                                        <i class="fas fa-envelope mr-1"></i>
                                                                        <%= submission.student.email %>
                                                                    </div>
                                                                    <div class="text-xs text-gray-400 mt-1">
                                                                        ID: <%= submission.student._id.toString().slice(-6) %>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td class="px-6 py-4">
                                                            <div class="text-lg font-semibold text-gray-900 mb-1">
                                                                <%= submission.assignment.title %>
                                                            </div>
                                                            <div class="text-sm text-gray-500">
                                                                <i class="fas fa-calendar mr-1"></i>
                                                                Hạn nộp: <%= new Date(submission.assignment.dueDate).toLocaleDateString('vi-VN') %>
                                                            </div>
                                                        </td>
                                                        <td class="px-6 py-4 whitespace-nowrap">
                                                            <div class="text-sm text-gray-900 font-semibold">
                                                                <%= new Date(submission.submittedAt).toLocaleDateString('vi-VN', {
                                                                    year: 'numeric',
                                                                    month: 'short',
                                                                    day: 'numeric'
                                                                }) %>
                                                            </div>
                                                            <div class="text-xs text-gray-500">
                                                                <%= new Date(submission.submittedAt).toLocaleTimeString('vi-VN', {
                                                                    hour: '2-digit',
                                                                    minute: '2-digit'
                                                                }) %>
                                                            </div>
                                                        </td>
                                                        <td class="px-6 py-4 text-center">
                                                            <span class="submission-status <%= isLate ? 'status-late' : 'status-pending' %>">
                                                                <i class="fas <%= isLate ? 'fa-exclamation-triangle' : 'fa-clock' %> mr-1"></i>
                                                                <%= isLate ? 'Nộp trễ' : 'Chờ chấm điểm' %>
                                                            </span>
                                                        </td>
                                                    </tr>
                                                <% }); %>
                                            </tbody>
                                        </table>
                                    </div>
                                <% } else { %>
                                    <div class="empty-state">
                                        <div class="empty-icon floating-animation">
                                            <i class="fas fa-check-circle"></i>
                                        </div>
                                        <h3 class="text-2xl font-bold text-gray-600 mb-4">Tuyệt vời!</h3>
                                        <p class="text-gray-500 text-lg">
                                            Không có bài tập nào cần chấm điểm trong lớp này.
                                        </p>
                                    </div>
                                <% } %>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div class="empty-state slide-in">
                            <div class="empty-icon floating-animation">
                                <i class="fas fa-graduation-cap"></i>
                            </div>
                            <h3 class="text-3xl font-bold text-gray-600 mb-4">Chưa có lớp học</h3>
                            <p class="text-gray-500 text-lg mb-6">
                                Bạn chưa có lớp học nào để chấm điểm. Hãy tạo lớp học mới hoặc được phân công vào lớp.
                            </p>
                            <div class="flex justify-center">
                                <a href="/teacher/classes" 
                                   class="btn-3d bg-gradient-to-r from-blue-500 to-purple-500 text-white px-8 py-4 rounded-xl font-semibold text-lg">
                                    <i class="fas fa-plus mr-2"></i>
                                    Tạo lớp học mới
                                </a>
                            </div>
                        </div>
                    <% } %>
                </div>
            </main>
        </div>
    </div>

    <script>
    // Class selector functionality
    document.addEventListener('DOMContentLoaded', function() {
        const classSelector = document.getElementById('classSelector');
        if (classSelector) {
            classSelector.addEventListener('change', function() {
                const selectedValue = this.value;
                if (selectedValue) {
                    // Redirect to grading page with selected class
                    window.location.href = `/teacher/grading?classId=${selectedValue}`;
                } else {
                    // Reset to show all classes
                    window.location.href = '/teacher/grading';
                }
            });
        }

        // Initialize animations when page loads
        // Animate elements on scroll
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };
        
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, observerOptions);
        
        document.querySelectorAll('.slide-in').forEach(el => {
            observer.observe(el);
        });

        // Add hover effects for stats cards
        document.querySelectorAll('.stats-card').forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-5px) scale(1.02)';
            });
            
            card.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0) scale(1)';
            });
        });
    });

    // Show notification function
    function showNotification(message, type = 'success') {
        const notification = document.createElement('div');
        notification.className = `notification ${type}`;
        notification.innerHTML = `
            <div class="flex items-center">
                <i class="fas ${type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle'} text-xl mr-3"></i>
                <span>${message}</span>
            </div>
        `;
        
        document.body.appendChild(notification);
        
        setTimeout(() => notification.classList.add('show'), 100);
        setTimeout(() => {
            notification.classList.remove('show');
            setTimeout(() => notification.remove(), 300);
        }, 3000);
    }
    </script>

