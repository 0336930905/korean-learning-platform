<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh sách học sinh | Giảng viên</title>
    <link rel="stylesheet" href="/style/style.css">
    <link rel="stylesheet" href="/style/teacher.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        .glass-card {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.3);
        }
        
        .gradient-bg {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        
        .card-hover {
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }
        
        .card-hover:hover {
            transform: translateY(-8px);
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
        }
        
        .floating-animation {
            animation: float 3s ease-in-out infinite;
        }
        
        @keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-8px); }
        }
        
        .slide-in {
            animation: slideIn 0.6s ease-out forwards;
        }
        
        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .gradient-text {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }
        
        .btn-3d {
            position: relative;
            transform-style: preserve-3d;
            transition: all 0.3s ease;
            overflow: hidden;
        }
        
        .btn-3d::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 50%;
            transition: all 0.4s ease;
            transform: translate(-50%, -50%);
        }
        
        .btn-3d:hover::before {
            width: 200%;
            height: 200%;
        }
        
        .btn-3d:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
        }
        
        .header-icon {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 32px;
            margin-bottom: 24px;
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
        }
        
        .stats-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(15px);
            border: 1px solid rgba(255, 255, 255, 0.3);
            border-radius: 20px;
            padding: 32px;
            position: relative;
            overflow: hidden;
            transition: all 0.3s ease;
        }
        
        .stats-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 4px;
        }
        
        .stats-total::before {
            background: linear-gradient(90deg, #3b82f6, #60a5fa);
        }
        
        .stats-completed::before {
            background: linear-gradient(90deg, #10b981, #34d399);
        }
        
        .stats-pending::before {
            background: linear-gradient(90deg, #f59e0b, #fbbf24);
        }
        
        .stats-card:hover {
            transform: translateY(-8px) scale(1.02);
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
        }
        
        .stats-icon {
            width: 70px;
            height: 70px;
            border-radius: 18px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 28px;
            margin-bottom: 20px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }
        
        .icon-total {
            background: linear-gradient(135deg, #3b82f6, #60a5fa);
        }
        
        .icon-completed {
            background: linear-gradient(135deg, #10b981, #34d399);
        }
        
        .icon-pending {
            background: linear-gradient(135deg, #f59e0b, #fbbf24);
        }
        
        .stats-number {
            font-size: 36px;
            font-weight: 700;
            line-height: 1;
            margin-bottom: 8px;
        }
        
        .table-container {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(15px);
            border: 1px solid rgba(255, 255, 255, 0.3);
            border-radius: 25px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }
        
        .table-header {
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
            border-bottom: 1px solid rgba(102, 126, 234, 0.2);
            padding: 32px;
        }
        
        .filter-section {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            border-radius: 16px;
            padding: 24px;
            margin-top: 24px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.05);
        }
        
        .filter-input {
            background: rgba(255, 255, 255, 0.9);
            border: 2px solid rgba(102, 126, 234, 0.2);
            border-radius: 12px;
            padding: 12px 16px;
            transition: all 0.3s ease;
            font-size: 16px;
        }
        
        .filter-input:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
            transform: scale(1.02);
            outline: none;
        }
        
        .search-input {
            padding-left: 50px;
        }
        
        .search-icon {
            position: absolute;
            left: 16px;
            top: 50%;
            transform: translateY(-50%);
            color: #667eea;
            font-size: 18px;
        }
        
        .custom-table {
            width: 100%;
            border-collapse: collapse;
        }
        
        .table-head {
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.05), rgba(118, 75, 162, 0.05));
        }
        
        .table-head th {
            padding: 20px 24px;
            text-align: left;
            font-weight: 600;
            color: #374151;
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border-bottom: 2px solid rgba(102, 126, 234, 0.1);
        }
        
        .table-row {
            transition: all 0.3s ease;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        }
        
        .table-row:hover {
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.05), rgba(118, 75, 162, 0.05));
            transform: scale(1.01);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }
        
        .table-row td {
            padding: 20px 24px;
            vertical-align: middle;
        }
        
        .student-avatar {
            width: 50px;
            height: 50px;
            border-radius: 15px;
            object-fit: cover;
            border: 3px solid white;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }
        
        .student-avatar:hover {
            transform: scale(1.1);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
        }
        
        .student-name {
            font-weight: 600;
            color: #374151;
            font-size: 16px;
            margin-bottom: 4px;
        }
        
        .student-email {
            color: #6b7280;
            font-size: 14px;
        }
        
        .student-id-badge {
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
            color: #667eea;
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
            border: 1px solid rgba(102, 126, 234, 0.2);
        }
        
        .class-name {
            color: #374151;
            font-weight: 500;
        }
        
        .score-badge {
            padding: 8px 16px;
            border-radius: 20px;
            font-weight: 600;
            font-size: 14px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            min-width: 60px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }
        
        .score-excellent {
            background: linear-gradient(135deg, #10b981, #34d399);
            color: white;
        }
        
        .score-good {
            background: linear-gradient(135deg, #3b82f6, #60a5fa);
            color: white;
        }
        
        .score-average {
            background: linear-gradient(135deg, #f59e0b, #fbbf24);
            color: white;
        }
        
        .score-poor {
            background: linear-gradient(135deg, #ef4444, #f87171);
            color: white;
        }
        
        .score-na {
            background: linear-gradient(135deg, #6b7280, #9ca3af);
            color: white;
        }
        
        .action-button {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            padding: 8px 16px;
            border-radius: 10px;
            text-decoration: none;
            font-weight: 500;
            font-size: 14px;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
        }
        
        .action-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
            color: white;
            text-decoration: none;
        }
        
        .btn-export {
            background: linear-gradient(135deg, #10b981, #34d399);
            color: white;
            border: none;
            padding: 12px 20px;
            border-radius: 12px;
            font-weight: 600;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(16, 185, 129, 0.3);
        }
        
        .btn-add {
            background: linear-gradient(135deg, #3b82f6, #60a5fa);
            color: white;
            border: none;
            padding: 12px 20px;
            border-radius: 12px;
            font-weight: 600;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(59, 130, 246, 0.3);
        }
        
        .btn-export:hover,
        .btn-add:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
        }
        
        .empty-state {
            text-align: center;
            padding: 80px 40px;
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.05), rgba(118, 75, 162, 0.05));
        }
        
        .empty-icon {
            font-size: 80px;
            color: #d1d5db;
            margin-bottom: 24px;
            animation: float 3s ease-in-out infinite;
        }
        
        .notification {
            position: fixed;
            top: 24px;
            right: 24px;
            padding: 16px 24px;
            border-radius: 12px;
            color: white;
            font-weight: 600;
            z-index: 10000;
            transform: translateX(100%);
            transition: transform 0.3s ease;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        }
        
        .notification.show {
            transform: translateX(0);
        }
        
        .notification.success {
            background: linear-gradient(135deg, #10b981, #34d399);
        }
        
        .notification.error {
            background: linear-gradient(135deg, #ef4444, #f87171);
        }
        
        .fade-in {
            animation: fadeIn 0.8s ease-out forwards;
        }
        
        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .modal-backdrop {
            background: rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(8px);
            animation: fadeIn 0.3s ease;
        }
        
        .modal-content {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(15px);
            border-radius: 25px;
            box-shadow: 0 25px 80px rgba(0, 0, 0, 0.2);
            animation: modalSlideIn 0.3s ease;
            overflow: hidden;
        }
        
        @keyframes modalSlideIn {
            from {
                opacity: 0;
                transform: scale(0.9) translateY(-50px);
            }
            to {
                opacity: 1;
                transform: scale(1) translateY(0);
            }
        }
        
        .loading-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(8px);
            display: none;
            align-items: center;
            justify-content: center;
            z-index: 9999;
        }
        
        .loading-spinner {
            width: 60px;
            height: 60px;
            border: 4px solid rgba(255, 255, 255, 0.3);
            border-top: 4px solid #667eea;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }
        
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        
        .no-results {
            animation: slideIn 0.6s ease-out;
        }
        
        @media (max-width: 768px) {
            .stats-card {
                padding: 24px;
            }
            
            .table-container {
                margin: 0 -16px;
                border-radius: 0;
            }
            
            .table-header {
                padding: 24px 16px;
            }
            
            .filter-section {
                margin: 24px -16px 0;
                border-radius: 0;
                padding: 16px;
            }
            
            .custom-table {
                font-size: 14px;
            }
            
            .table-head th,
            .table-row td {
                padding: 12px 8px;
            }
        }
    </style>
</head>
<body class="bg-gradient-to-br from-blue-50 via-purple-50 to-pink-50 min-h-screen">
    <!-- Loading Overlay -->
    <div class="loading-overlay" id="loadingOverlay">
        <div class="loading-spinner"></div>
    </div>

    <div class="flex h-screen bg-gradient-to-br from-blue-50 via-purple-50 to-pink-50">
        <%- include('../partials/teacher_sidebar') %>

        <div class="flex-1 flex flex-col overflow-hidden">
            <%- include('../partials/dashboards_header') %>

            <main class="flex-1 overflow-x-hidden overflow-y-auto p-6">
                <!-- Hero Section -->
                <div class="text-center mb-8 slide-in">
                    <div class="header-icon floating-animation mx-auto">
                        <i class="fas fa-user-graduate"></i>
                    </div>
                    <h1 class="text-4xl font-bold gradient-text mb-4">Danh sách học sinh</h1>
                    <p class="text-xl text-gray-600">Quản lý và theo dõi tiến độ học tập của học sinh</p>
                </div>

                <!-- Enhanced Stats Cards -->
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                    <!-- Total Students -->
                    <div class="stats-card stats-total card-hover slide-in">
                        <div class="stats-icon icon-total floating-animation">
                            <i class="fas fa-users"></i>
                        </div>
                        <div class="stats-number text-blue-600">
                            <%= students.length %>
                        </div>
                        <h3 class="text-lg font-semibold text-gray-700 mb-2">Tổng số học sinh</h3>
                        <p class="text-sm text-gray-500">Đang theo học các khóa</p>
                    </div>

                    <!-- Students with Scores -->
                    <div class="stats-card stats-completed card-hover slide-in" style="animation-delay: 0.1s;">
                        <div class="stats-icon icon-completed floating-animation pulse-animation" style="animation-delay: 0.5s;">
                            <i class="fas fa-check-circle"></i>
                        </div>
                        <div class="stats-number text-green-600">
                            <%= students.filter(s => s.averageScore !== 'N/A').length %>
                        </div>
                        <h3 class="text-lg font-semibold text-gray-700 mb-2">Đã có điểm</h3>
                        <p class="text-sm text-gray-500">Hoàn thành đánh giá</p>
                    </div>

                    <!-- Students without Scores -->
                    <div class="stats-card stats-pending card-hover slide-in" style="animation-delay: 0.2s;">
                        <div class="stats-icon icon-pending floating-animation" style="animation-delay: 1s;">
                            <i class="fas fa-clock"></i>
                        </div>
                        <div class="stats-number text-yellow-600">
                            <%= students.filter(s => s.averageScore === 'N/A').length %>
                        </div>
                        <h3 class="text-lg font-semibold text-gray-700 mb-2">Chưa có điểm</h3>
                        <p class="text-sm text-gray-500">Chờ đánh giá</p>
                    </div>
                </div>

                <!-- Enhanced Table Container -->
                <div class="table-container slide-in fade-in card-hover">
                    <!-- Table Header -->
                    <div class="table-header">
                        <div class="flex flex-col lg:flex-row lg:items-center justify-between gap-6">
                            <div>
                                <h2 class="text-2xl font-bold text-gray-800 mb-2">
                                    <i class="fas fa-list-ul text-purple-500 mr-3"></i>
                                    Danh sách học sinh
                                </h2>
                                <p class="text-gray-600">Tổng cộng <%= students.length %> học sinh đang theo học</p>
                            </div>
                            
                            <div class="flex items-center space-x-4">
                                <button onclick="exportToExcel()" 
                                        class="btn-export btn-3d">
                                    <i class="fas fa-download mr-2"></i>
                                    Xuất Excel
                                </button>
                                <button onclick="openAddStudentModal()" 
                                        class="btn-add btn-3d">
                                    <i class="fas fa-plus mr-2"></i>
                                    Thêm học sinh
                                </button>
                            </div>
                        </div>

                        <!-- Enhanced Filters -->
                        <div class="filter-section">
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <div>
                                    <label class="block text-sm font-semibold text-gray-700 mb-2">
                                        <i class="fas fa-filter mr-2 text-purple-500"></i>
                                        Lọc theo lớp học
                                    </label>
                                    <select id="classFilter" class="filter-input w-full">
                                        <option value="">📚 Tất cả lớp học</option>
                                        <% classes.forEach(classItem => { %>
                                            <option value="<%= classItem._id %>">
                                                🎓 <%= classItem.course.title %> - <%= classItem.name %>
                                            </option>
                                        <% }); %>
                                    </select>
                                </div>
                                
                                <div>
                                    <label class="block text-sm font-semibold text-gray-700 mb-2">
                                        <i class="fas fa-search mr-2 text-blue-500"></i>
                                        Tìm kiếm học sinh
                                    </label>
                                    <div class="relative">
                                        <input type="text" 
                                               id="searchInput" 
                                               placeholder="Tìm theo tên hoặc mã số học sinh..."
                                               class="filter-input search-input w-full">
                                        <i class="fas fa-search search-icon"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Enhanced Student Table -->
                    <div class="overflow-x-auto">
                        <table class="custom-table">
                            <thead class="table-head">
                                <tr>
                                    <th>
                                        <i class="fas fa-user mr-2"></i>
                                        Thông tin học sinh
                                    </th>
                                    <th>
                                        <i class="fas fa-id-card mr-2"></i>
                                        Mã số học sinh
                                    </th>
                                    <th>
                                        <i class="fas fa-chalkboard mr-2"></i>
                                        Lớp học
                                    </th>
                                    <th>
                                        <i class="fas fa-chart-line mr-2"></i>
                                        Điểm trung bình
                                    </th>
                                    <th class="text-center">
                                        <i class="fas fa-cogs mr-2"></i>
                                        Thao tác
                                    </th>
                                </tr>
                            </thead>
                            <tbody id="studentTableBody">
                                <% if (students.length > 0) { %>
                                    <% students.forEach((student, index) => { %>
                                        <tr class="table-row slide-in" 
                                            style="animation-delay: <%= index * 0.05 %>s;"
                                            data-class-id="<%= student.classId || '' %>"
                                            data-student-name="<%= student.fullName.toLowerCase() %>"
                                            data-student-id="<%= student.studentId.toLowerCase() %>">
                                            <!-- Student Info -->
                                            <td>
                                                <div class="flex items-center space-x-4">
                                                    <img class="student-avatar floating-animation" 
                                                         style="animation-delay: <%= index * 0.1 %>s;"
                                                         src="<%= student.avatar || '/images/default-avatar.png' %>" 
                                                         alt="<%= student.fullName %>"
                                                         onerror="this.src='/images/default-avatar.png'">
                                                    <div>
                                                        <div class="student-name">
                                                            <%= student.fullName %>
                                                        </div>
                                                        <div class="student-email">
                                                            <i class="fas fa-envelope mr-1"></i>
                                                            <%= student.email %>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>

                                            <!-- Student ID -->
                                            <td>
                                                <span class="student-id-badge">
                                                    <i class="fas fa-hashtag mr-1"></i>
                                                    <%= student.studentId %>
                                                </span>
                                            </td>

                                            <!-- Class Name -->
                                            <td>
                                                <div class="class-name">
                                                    <i class="fas fa-graduation-cap mr-2 text-purple-500"></i>
                                                    <%= student.className %>
                                                </div>
                                            </td>

                                            <!-- Average Score -->
                                            <td>
                                                <% if (student.averageScore !== 'N/A') { %>
                                                    <% 
                                                        const score = parseFloat(student.averageScore);
                                                        let scoreClass = '';
                                                        if (score >= 8.5) scoreClass = 'score-excellent';
                                                        else if (score >= 7) scoreClass = 'score-good';
                                                        else if (score >= 5) scoreClass = 'score-average';
                                                        else scoreClass = 'score-poor';
                                                    %>
                                                    <span class="score-badge <%= scoreClass %>">
                                                        <i class="fas fa-star mr-1"></i>
                                                        <%= student.averageScore %>
                                                    </span>
                                                <% } else { %>
                                                    <span class="score-badge score-na">
                                                        <i class="fas fa-minus mr-1"></i>
                                                        Chưa có điểm
                                                    </span>
                                                <% } %>
                                            </td>

                                            <!-- Actions -->
                                            <td class="text-center">
                                                <a href="/teacher/students/<%= student.id %>" 
                                                   class="action-button">
                                                    <i class="fas fa-eye mr-2"></i>
                                                    Chi tiết
                                                </a>
                                            </td>
                                        </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="5">
                                            <div class="empty-state">
                                                <div class="empty-icon">
                                                    <i class="fas fa-user-graduate"></i>
                                                </div>
                                                <h3 class="text-2xl font-bold text-gray-600 mb-4">Chưa có học sinh nào</h3>
                                                <p class="text-gray-500 text-lg mb-6">
                                                    Danh sách học sinh sẽ xuất hiện tại đây khi có học sinh đăng ký
                                                </p>
                                                <button onclick="openAddStudentModal()" 
                                                        class="btn-add btn-3d">
                                                    <i class="fas fa-plus mr-2"></i>
                                                    Thêm học sinh đầu tiên
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Add Student Modal -->
    <div id="addStudentModal" class="fixed inset-0 modal-backdrop hidden z-50">
        <div class="flex items-center justify-center min-h-screen p-4">
            <div class="modal-content w-full max-w-2xl">
                <div class="gradient-bg text-white p-6">
                    <div class="flex justify-between items-center">
                        <div>
                            <h3 class="text-2xl font-bold mb-2">Thêm học sinh mới</h3>
                            <p class="opacity-90">Thêm học sinh vào lớp học</p>
                        </div>
                        <button onclick="closeAddStudentModal()" 
                                class="text-white hover:text-gray-200 transition-colors p-2">
                            <i class="fas fa-times text-xl"></i>
                        </button>
                    </div>
                </div>
                
                <div class="p-6">
                    <form id="addStudentForm" class="space-y-6">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label class="block text-sm font-semibold text-gray-700 mb-2">
                                    Họ và tên <span class="text-red-500">*</span>
                                </label>
                                <input type="text" required class="filter-input w-full" placeholder="Nhập họ và tên">
                            </div>
                            <div>
                                <label class="block text-sm font-semibold text-gray-700 mb-2">
                                    Email <span class="text-red-500">*</span>
                                </label>
                                <input type="email" required class="filter-input w-full" placeholder="Nhập email">
                            </div>
                        </div>
                        
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">
                                Lớp học <span class="text-red-500">*</span>
                            </label>
                            <select required class="filter-input w-full">
                                <option value="">Chọn lớp học</option>
                                <% classes.forEach(classItem => { %>
                                    <option value="<%= classItem._id %>">
                                        <%= classItem.course.title %> - <%= classItem.name %>
                                    </option>
                                <% }); %>
                            </select>
                        </div>
                        
                        <div class="flex justify-end space-x-4 pt-4 border-t">
                            <button type="button" 
                                    onclick="closeAddStudentModal()"
                                    class="px-6 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">
                                Hủy
                            </button>
                            <button type="submit" 
                                    class="btn-add btn-3d">
                                <i class="fas fa-plus mr-2"></i>
                                Thêm học sinh
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Search and filter functionality
        const searchInput = document.getElementById('searchInput');
        const classFilter = document.getElementById('classFilter');
        const tableRows = document.querySelectorAll('#studentTableBody .table-row');

        function filterStudents() {
            const searchTerm = searchInput.value.toLowerCase();
            const selectedClass = classFilter.value;
            let visibleCount = 0;

            tableRows.forEach(row => {
                const studentName = row.getAttribute('data-student-name') || '';
                const studentId = row.getAttribute('data-student-id') || '';
                const classId = row.getAttribute('data-class-id') || '';
                
                const matchesSearch = studentName.includes(searchTerm) || studentId.includes(searchTerm);
                const matchesClass = !selectedClass || classId === selectedClass;

                if (matchesSearch && matchesClass) {
                    row.style.display = '';
                    row.style.animation = 'slideIn 0.3s ease-out forwards';
                    visibleCount++;
                } else {
                    row.style.display = 'none';
                }
            });

            // Show/hide no results message
            showNoResultsMessage(visibleCount === 0 && (searchTerm || selectedClass));
        }

        function showNoResultsMessage(show) {
            const existingMessage = document.getElementById('noResultsMessage');
            
            if (show) {
                if (!existingMessage) {
                    const tableBody = document.getElementById('studentTableBody');
                    const noResultsRow = document.createElement('tr');
                    noResultsRow.id = 'noResultsMessage';
                    noResultsRow.className = 'no-results';
                    noResultsRow.innerHTML = `
                        <td colspan="5">
                            <div class="empty-state">
                                <div class="empty-icon">
                                    <i class="fas fa-search"></i>
                                </div>
                                <h3 class="text-xl font-bold text-gray-600 mb-2">Không tìm thấy kết quả</h3>
                                <p class="text-gray-500">Không có học sinh nào phù hợp với tiêu chí tìm kiếm</p>
                            </div>
                        </td>
                    `;
                    tableBody.appendChild(noResultsRow);
                }
            } else if (existingMessage) {
                existingMessage.remove();
            }
        }

        // Event listeners
        searchInput.addEventListener('input', filterStudents);
        classFilter.addEventListener('change', filterStudents);

        // Modal functions
        function openAddStudentModal() {
            document.getElementById('addStudentModal').classList.remove('hidden');
        }

        function closeAddStudentModal() {
            document.getElementById('addStudentModal').classList.add('hidden');
            document.getElementById('addStudentForm').reset();
        }

        // Export to Excel function
        function exportToExcel() {
            showLoading(true);
            
            // Simulate export process
            setTimeout(() => {
                showNotification('Đang xuất file Excel...', 'success');
                
                // Create download link (you'll need to implement the actual export functionality)
                const link = document.createElement('a');
                link.href = '/teacher/students/export'; // Add this route in your backend
                link.download = 'danh-sach-hoc-sinh.xlsx';
                link.click();
                
                showLoading(false);
            }, 1500);
        }

        // Add student form submission
        document.getElementById('addStudentForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            showLoading(true);
            
            // Simulate form submission
            setTimeout(() => {
                showNotification('Thêm học sinh thành công!', 'success');
                closeAddStudentModal();
                showLoading(false);
                
                // Reload page to show new student
                setTimeout(() => {
                    window.location.reload();
                }, 1500);
            }, 2000);
        });

        // Utility functions
        function showLoading(show = true) {
            document.getElementById('loadingOverlay').style.display = show ? 'flex' : 'none';
        }

        function showNotification(message, type = 'success') {
            const notification = document.createElement('div');
            notification.className = `notification ${type}`;
            notification.innerHTML = `
                <div class="flex items-center">
                    <i class="fas ${type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle'} text-xl mr-3"></i>
                    <span>${message}</span>
                </div>
            `;
            
            document.body.appendChild(notification);
            
            setTimeout(() => notification.classList.add('show'), 100);
            setTimeout(() => {
                notification.classList.remove('show');
                setTimeout(() => notification.remove(), 300);
            }, 4000);
        }

        // Close modal when clicking outside
        document.getElementById('addStudentModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeAddStudentModal();
            }
        });

        // Initialize animations on page load
        document.addEventListener('DOMContentLoaded', function() {
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };
            
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0)';
                    }
                });
            }, observerOptions);
            
            document.querySelectorAll('.slide-in').forEach(el => {
                observer.observe(el);
            });
        });
    </script>
</body>
</html>